{% extends 'estructura/plantilla.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/datatables.min.css') }}">
{% endblock %}

{% block contwrapper %}
    <div class="content-wrapper">
        <section class="content">
            <div class="panel panel-novo">
                <div class="panel-heading">
                    <h3 class="panel-title">Reporte de Astillero</h3>
                </div>
                <div class="panel-body">
                    <table class="table-novo table text-center">
                        <thead>
                        <tr>
                            <th>Cliente</th>
                            <th>Adeudo</th>
                            <th>Abonado</th>
                            <th>Total adeudo</th>
                            <th class="no-sort"></th>
                        </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </section>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('js/datatables.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bower_components/moment/min/moment.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bower_components/moment/locale/es.js') }}"></script>
    <script type="text/javascript">
      (function ($, settings) {
        moment.locale('es');

        $('.table-novo').DataTable({
          ...settings,
          ajax: '{{ path('astillero_reporte_index_data') }}',
          order: [[1, 'asc']],
          columns: [
            {responsivePriority: 2},
            {responsivePriority: 2},
            {responsivePriority: 2},
            {responsivePriority: 2},
            {responsivePriority: 0},
          ],
          createdRow: function (row, cliente) {
            let dateCell = row.cells[1];
            let lastPayment = moment(cliente[1], 'YYYY-MM-DD HH:mm:ss', true);
            if(lastPayment.isValid()) {
              dateCell.innerHTML = lastPayment.fromNow();
            }

            row.cells[4].innerHTML = `
                <a class="btn btn-xs btn-block btn-naranja" href="{{ path('cliente_notificacion_index') }}?u=${cliente[4]}">Notificar</a>
            `;
          },
        });
      })(jQuery, datatablesSettings);
    </script>
{% endblock %}