{% extends 'estructura/plantilla.twig' %}

{% block title %}
    Novonautiva | Servicios Adicionales
{% endblock %}

{% block contwrapper %}
    <div class="content-wrapper">
        <section class="content">
            <div class="panel panel-novo">

                <div class="panel-heading">
                    <h3 class="panel-title">Servicios Adicionales</h3>
                </div>
                <div class="panel-body">
                    <div class="table-responsive scroll-novo">
                        <table class="table text-center">
                            <thead>
                            <tr>
                                <th>Num.</th>
                                <th>Cliente</th>
                                <th>Barco</th>
                                <th>Dolar</th>
                                <th>Iva</th>
                                <th>Subtotal</th>
                                <th>Iva total</th>
                                <th>Total</th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody>
                            {% set i=0 %}
                            {% for marinaHumedaCotizacionAdicional in marinaHumedaCotizacionAdicionals|reverse %}
                                {% set i=i+1 %}
                                <tr>
                                    <td>{{ i }}</td>
                                    <td>{{ marinaHumedaCotizacionAdicional.cliente }}</td>
                                    <td>{{ marinaHumedaCotizacionAdicional.barco }}</td>
                                    <td>${{ marinaHumedaCotizacionAdicional.dolar|number_format(2,'.',',') }}</td>
                                    <td>{{ marinaHumedaCotizacionAdicional.iva }}%</td>
                                    <td>${{ marinaHumedaCotizacionAdicional.subtotal|number_format(2,'.',',') }}</td>
                                    <td>${{ marinaHumedaCotizacionAdicional.ivatotal|number_format(2,'.',',') }}</td>
                                    <td>${{ marinaHumedaCotizacionAdicional.total|number_format(2,'.',',') }}</td>
                                    <td>
                                        <a class="btn btn-morado-claro"
                                           href="{{ path('marina-humeda-cotizacion-adicional_show', { 'id': marinaHumedaCotizacionAdicional.id }) }}">Detalle</a>
                                        <a class="btn btn-azul"
                                           href="{{ path('marina-humeda-cotizacion-adicional_edit', { 'id': marinaHumedaCotizacionAdicional.id }) }}">Editar</a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %}
