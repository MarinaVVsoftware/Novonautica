{% extends 'estructura/plantilla.twig' %}

{% block title %}
    Novonautiva | Editar Monedero Cliente
{% endblock %}

{% block contwrapper %}
<div class="content-wrapper">
    <section class="content">
        <div class="panel panel-novo">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-sm-6">
                        <h3 class="panel-title">Editar Monedero Cliente</h3>
                    </div>
                    <div class="col-sm-6">
                        <a class="btn btn-contorno-azul pull-right"
                           href="{{ path('monedero_index') }}">
                            Regresar
                        </a>
                    </div>
                </div>
            </div>
            <div class="panel-body">
                {% form_theme edit_form 'estructura/temaerror.html.twig' %}
                {{ form_start(edit_form) }}

                <div class="row">
                    <div class="col-sm-6">
                        <label>Cliente</label>
                        <div class='info-input'> {{ cliente.nombre }}</div>
                        {{ form_widget(edit_form) }}
                    </div>
                </div>

                <div class="row espacio-linea-arriba2">
                    <div class="col-sm-6">
                        <button type="submit" class="btn btn-azul pull-right">
                            <i class="fa fa-floppy-o" aria-hidden="true"></i>
                            Guardar
                        </button>
                    </div>
                </div>
                {{ form_end(edit_form) }}
            </div>
        </div>
    </section>
</div>
{% endblock %}