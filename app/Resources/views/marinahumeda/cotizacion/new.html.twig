                        "<label>Correo del capitán</label>" +
                        "<div class='info-input'>" + barcos.correoCapitan + "</div>";
                    $("#info-barco").append(html);
                    $("#de_eslora").data('valor', barcos.eslora);
                    $("#e_eslora").data('valor', barcos.eslora);
                    $("#de_eslora").html(barcos.eslora);
