{% extends 'estructura/plantilla.twig' %}

{% block contwrapper %}
<div class="content-wrapper">
    <section class="content">
        <div class="panel panel-novo">
            <div class="panel-heading">
                <h3 class="panel-title">{{ title }}</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-sm-6">
                        <table class="table">
                            <thead>
                            <tr>
                                <th>Id</th>
                                <th>Observaciones</th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for ordenDeTrabajo in ordenDeTrabajos %}
                                <tr>
                                    <td>{{ ordenDeTrabajo.id }}</td>
                                    <td>{{ ordenDeTrabajo.observaciones }}</td>
                                    <td>
                                        {#<a class="btn btn-morado-claro" href="{{ path('ordendetrabajo_show', { 'id': ordenDeTrabajo.id }) }}">Ver</a>#}
                                        {#<a class="btn btn-azul" href="{{ path('ordendetrabajo_edit', { 'id': ordenDeTrabajo.id }) }}">Editar</a>#}
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="panel-footer">
                <a class="btn btn-azul" href="{{ path('ordendetrabajo_new') }}">Nuevo ODT</a>
            </div>
        </div>
    </section>
</div>
{% endblock %}
