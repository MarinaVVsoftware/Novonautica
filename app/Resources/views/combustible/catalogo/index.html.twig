{% extends 'estructura/plantilla.twig' %}
{% block contwrapper %}
    <div class="content-wrapper">
        <section class="content">
            <div class="panel panel-novo">
                <div class="panel-heading">
                    <h3 class="panel-title">{{ title }}</h3>
                </div>
                <div class="panel-body">
                    <table class="table table-novo table-condensed text-center">
                        <thead>
                        <tr>
                            <th>Combustible</th>
                            <th>Precio</th>
                            <th>Cuota IESPS</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for c in catalogo %}
                        <tr>
                            <td>{{ c.nombre }}</td>
                            <td>$ {{ (c.precio/100)|number_format(2) }} <small>MXN</small></td>
                            <td>{{ c.cuotaIesps }}</td>
                            <td>
                                <a class="btn btn-azul" href="{{ path('combustible_catalogo_edit', { 'id': c.id }) }}">
                                    Editar
                                </a>
                            </td>
                        </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <div class="panel-footer">
                    <a class="btn btn-azul" href="{{ path('combustible_catalogo_new') }}">
                        <i class="fa fa-plus" aria-hidden="true"></i>
                        Agregar
                    </a>
                </div>
            </div>
        </section>
    </div>
{% endblock %}