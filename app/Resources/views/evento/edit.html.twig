{% extends 'estructura/plantilla.twig' %}
{% import 'estructura/modalborrar.twig' as modal %}
{% block title %}
    Novonautiva | Editar Evento
{% endblock %}

{% block contwrapper %}
    <div class="content-wrapper">
        <section class="content">
            <div class="panel panel-novo">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-sm-6">
                            <h3 class="panel-title">Editar Evento</h3>
                        </div>
                        <div class="col-sm-6">
                            <a href="{{ path('evento_index') }}" class="btn btn-contorno-azul pull-right">Regresar</a>
                        </div>
                    </div>

                </div>
                <div class="panel-body">
                    {% form_theme edit_form 'estructura/temaerror.html.twig' %}
                    {{ form_start(edit_form) }}
                    <div class="row">
                        <div class="col-sm-6">
                            {{ form_errors(edit_form.titulo) }}
                            {{ form_errors(edit_form.fechainicio) }}
                            {{ form_errors(edit_form.fechafin) }}
                            {{ form_errors(edit_form.horainicio) }}
                            {{ form_errors(edit_form.horafin) }}
                            {{ form_errors(edit_form.descripcion) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            {{ form_label(edit_form.titulo) }}
                            {{ form_widget(edit_form.titulo) }}
                        </div>
                        <div class="col-sm-6">
                            <div class="input-daterange" id="rangoFehas">
                                <div class="row">
                                    <div class="col-sm-6">
                                        {{ form_label(edit_form.fechainicio) }}
                                        {{ form_widget(edit_form.fechainicio) }}
                                    </div>
                                    <div class="col-sm-6">
                                        {{ form_label(edit_form.fechafin) }}
                                        {{ form_widget(edit_form.fechafin) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            {{ form_label(edit_form.descripcion) }}
                            {{ form_widget(edit_form.descripcion) }}
                        </div>
                        <div class="col-sm-6">
                            <div class="row">
                                <div class="col-sm-6">
                                    <p>{{ form_label(edit_form.horainicio) }}</p>
                                    <p>{{ form_widget(edit_form.horainicio) }}</p>
                                </div>
                                <div class="col-sm-6">
                                    <p>{{ form_label(edit_form.horafin) }}</p>
                                    <p>{{ form_widget(edit_form.horafin) }}</p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-6">
                                    {{ form_label(edit_form.fondocolor) }}
                                    {{ form_widget(edit_form.fondocolor) }}
                                </div>
                                <div class="col-sm-6">
                                    {{ form_label(edit_form.letracolor) }}
                                    {{ form_widget(edit_form.letracolor) }}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            {{ form_row(edit_form.isPublico) }}
                        </div>
                    </div>
                    <div class="row espacio-linea">
                        <div class="col-sm-12">
                            <hr>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <button type="submit" class="btn btn-azul pull-right">
                                <i class="fa fa-floppy-o" aria-hidden="true"></i>
                                Guardar
                            </button>
                        </div>
                    </div>
                    {{ form_end(edit_form) }}
                    {% if is_granted(expression('has_role("AGENDA_DELETE") or (user.isAdmin())')) %}
                        <div class="row espacio-linea-arriba2">
                            <div class="col-sm-12">
                                {{ delete_form is defined ? modal.deleteButton('Evento') : '' }}
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>
        </section>
    </div>
{% endblock %}
{% block modals %}
    {{ delete_form is defined ? modal.deleteModal(delete_form) : '' }}
{% endblock %}