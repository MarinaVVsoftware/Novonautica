{% extends 'estructura/plantilla.twig' %}

{% block title %}
    Novonautiva | Movimientos Monedero Cliente
{% endblock %}

{% block contwrapper %}

    <div class="content-wrapper">
        <section class="content">
            <div class="panel panel-novo">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-sm-6">
                            <h3 class="panel-title">Movimientos Monedero Cliente</h3>
                        </div>
                        <div class="col-sm-6">
                            <a class="btn btn-contorno-azul pull-right"
                               href="{{ path('mh_monedero_index') }}">
                                Regresar
                            </a>
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-sm-8 col-sm-offset-2">
                            <label>Cliente:</label>
                            <div class='info-input'> {{ cliente.nombre }}</div>
                        </div>
                    </div>
                    <div class="row espacio-linea-arriba2">
                        <div class="col-sm-8 col-sm-offset-2">
                            <table class="table text-center">
                                <thead>
                                <tr>
                                    <th>Fecha</th>
                                    <th>Monto</th>
                                    <th>Opetación</th>
                                    <th>Resultante</th>
                                    <th>Descripción</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for movmon in cliente.monederomovimientos|reverse %}
                                    {% if movmon.tipo == 1 %}
                                    <tr>
                                        <td>{% if movmon.fecha %}{{ movmon.fecha|date('d-m-Y') }}{% endif %}</td>
                                        <td>$ {{ (movmon.monto/100)|number_format(2,'.',',') }}</td>
                                        <td>{% if movmon.operacion == 1 %}
                                                Suma
                                            {% elseif movmon.operacion == 2 %}
                                                Resta
                                            {% else %}
                                                Indefinido
                                            {% endif %}
                                        </td>
                                        <td>$ {{ (movmon.resultante/100)|number_format(2,'.',',') }}</td>
                                       <td>{{ movmon.descripcion }}</td>
                                    </tr>
                                    {% endif %}
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

            </div>
        </section>
    </div>
{% endblock %}
