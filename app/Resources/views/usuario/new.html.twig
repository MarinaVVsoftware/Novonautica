{% extends 'estructura/plantilla.twig' %}

{% block title %}
    Novonautiva | Usuarios agregar
{% endblock %}

{% block contwrapper %}
    <div class="content-wrapper">
        <section class="content">
            <div class="panel panel-novo">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-sm-6">
                            <h3 class="panel-title">Agregar Usuario</h3>
                        </div>
                        <div class="col-sm-6">
                            <a href="{{ path('usuario_index') }}" class="btn btn-contorno-azul pull-right">
                                Regresar
                            </a>
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    {% form_theme form 'estructura/temaerror.html.twig' %}
                    {{ form_start(form) }}
                    <div class="row">
                        <div class="col-sm-6">
                            {{ form_errors(form.nombre) }}
                            {{ form_errors(form.correo) }}
                            {{ form_errors(form.username) }}
                            {{ form_errors(form.estatus) }}
                            {{ form_errors(form.password.first) }}
                            {{ form_errors(form.password.second) }}
                            {{ form_errors(form.rol) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <p>
                                {{ form_label(form.nombre) }}
                            </p>
                            <p>

                                {{ form_widget(form.nombre) }}
                            </p>
                            <p>
                                {{ form_label(form.correo) }}
                            </p>
                            <p>

                                {{ form_widget(form.correo) }}
                            </p>
                            <p>
                                {{ form_label(form.username) }}
                            </p>
                            <p>

                                {{ form_widget(form.username) }}
                            </p>
                            <p>
                                Estatus
                                <span class="cont-label-novo">
                                    {{ form_widget(form.estatus,{'attr': { 'checked': 'true' }}) }}
                                    {{ form_label(form.estatus) }}
                                </span>
                            </p>

                        </div>
                        <div class="col-md-3">
                            <p>
                                {{ form_label(form.password.first) }}
                            </p>
                            <p>

                                {{ form_widget(form.password.first) }}
                            </p>
                            <p>
                                {{ form_label(form.password.second) }}
                            </p>
                            <p>

                                {{ form_widget(form.password.second) }}
                            </p>
                            <p>
                                {{ form_label(form.rol) }}
                            </p>
                            <p>

                                {{ form_widget(form.rol) }}
                            </p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <button type="submit" class="btn btn-azul pull-right">
                                <i class="fa fa-floppy-o" aria-hidden="true"></i>
                                Guardar
                            </button>
                        </div>
                    </div>
                    {{ form_end(form) }}
                    <div class="row espacio-linea-arriba2">
                        <div class="col-sm-6">
                            <a href="{{ path('usuario_index') }}" class="btn btn-naranja pull-right">
                                <i class="fa fa-ban" aria-hidden="true"></i>
                                Cancelar
                            </a>
                        </div>
                    </div>
                </div>

            </div>
        </section>
    </div>
{% endblock %}
