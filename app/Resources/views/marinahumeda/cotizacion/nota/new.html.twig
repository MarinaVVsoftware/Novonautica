{% extends 'estructura/plantilla.twig' %}
{% block contwrapper %}
<div class="content-wrapper">
    <section class="content">
        <div class="panel panel-novo">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-sm-6">
                        <h3 class="panel-title">Agregar Nota</h3>
                        <span>
                            {% if marinaHumedaCotizacion.foliorecotiza == 0 %}
                                {{ marinaHumedaCotizacion.folio }}
                            {% else %}
                                {{ marinaHumedaCotizacion.folio }}-{{ marinaHumedaCotizacion.foliorecotiza }}
                            {% endif %}
                        </span>
                    </div>
                    <div class="col-sm-6">
                        <a href="{{ path('marina-humeda_show',{'id':marinaHumedaCotizacion.id}) }}"
                           class="btn btn-contorno-azul pull-right">
                            Regresar
                        </a>
                    </div>
                </div>
            </div>

            <div class="panel-body">
                {{ form_start(form) }}
                <div class="row">
                    <div class="col-sm-3">
                        <label>Cliente</label>
                        <div class='info-input'>{{ marinaHumedaCotizacion.cliente }}</div>
                        <label>Barco</label>
                        <div class='info-input'>{{ marinaHumedaCotizacion.barco }}</div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-6">
                        {{ form_row(form.descripcion) }}
                    </div>
                </div>
            </div>
            <div class="panel-footer">
                <div class="row">
                    <div class="col-sm-12">
                        <button type="submit" class="btn btn-azul pull-right">
                            <i class="fa fa-floppy-o" aria-hidden="true"></i>
                            Guardar
                        </button>
                    </div>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </section>
</div>
{% endblock %}