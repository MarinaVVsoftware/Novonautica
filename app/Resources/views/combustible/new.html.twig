{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
      (function ($) {
        $('.selectclientebuscar').change(function (e) {
          $('#loading').show();
          $("#info-barco").empty();
          $("#info-cliente").empty();
          var url = "{{ path('ajax_busca_cliente_todo',{'id':'iddelcliente','_format':'json'}) }}";
          url = url.replace("iddelcliente", $(this).val());
          $.ajax({
            method: "GET",
            url: url,
            dataType: 'json',
            success: function (cliente) {
              var html = "<label>Correo electrónico</label>" + "<div class='info-input'>" + cliente.correo + "</div>" +
                         "<label>Número de teléfono</label>" + "<div class='info-input'>" + cliente.telefono + "</div>" +
                         "<label>Dirección</label>" + "<div class='info-input'>" + cliente.direccion + "</div>";
              $("#info-cliente").append(html);
              $('#loading').hide();
            },
            error: function (jqXHR, exception) {
                    $('#loading').hide();
            }
          }).fail(function () {
            $('#loading').hide();
          });
        });
          var x = 1;
          $('.buscabarcomh').click(function () {
              if (x === 2) {
                  if ($("input[type=radio]:checked").val() != null) {
                      $('#loading').show();
                      $("#info-barco").empty();
                      var idbarco = $("input[type=radio]:checked").val();
                      buscaDatosBarco(idbarco);
                      x = 1;
                  }
              } else {
                  x++;
              }
          });
        function buscaDatosBarco(idbarco) {
          $.ajax({
            method: "GET",
            url: `{{ app.request.baseUrl }}/ajax/buscabarcotodo/${idbarco}.json`,
            dataType: 'json',
            success: function (barco) {
              JSON.stringify(barco);
              var html = "<label>Modelo</label>" + "<div class='info-input'>" + barco.modelo + "</div>" +
                         "<label>Eslora</label>" + "<div class='info-input'>" + barco.eslora + "</div>" +
                         "<label>Manga</label>" + "<div class='info-input'>" + barco.manga + "</div>" +
                         "<label>Nombre del capitán</label>" + "<div class='info-input'>" + barco.nombreCapitan + "</div>" +
                         "<label>Teléfono del capitán</label>" + "<div class='info-input'>" + barco.telefonoCapitan + "</div>" +
                         "<label>Correo del capitán</label>" + "<div class='info-input'>" + barco.correoCapitan + "</div>";
              $("#info-barco").append(html);

              // Filtrado de opcions de slip por tamaño de eslora
              const slipOptions = [...document.querySelectorAll('#appbundle_marinahumedacotizacion_slip > option')]
                  .filter((slip) => barco.eslora >= Number(slip.dataset.feet)
                      ? slip.style.display = 'none'
                      : slip.style.display = 'block');
            },
            complete: () => { $("#loading").hide(); }
          });
        }
      })(jQuery);

      let cantidad_mxn = document.getElementById('combustible_cantidad_mxn');
      let cantidad_usd = document.getElementById('combustible_cantidad_usd');
      let precio_mxn = document.getElementById('appbundle_marinahumedacotizacion_mhcservicios_0_precio');
      let precio_usd = document.getElementById('combustible_precio_usd');
      let iva = Number(document.getElementById('valiva').dataset.valor);

      $('#appbundle_marinahumedacotizacion_mhcservicios_0_cantidad').keyup(function (cantidad) {
          cantidad_mxn.dataset.valor = cantidad.target.value;
          cantidad_mxn.innerHTML = cantidad.target.value;
          cantidad_usd.dataset.valor = cantidad.target.value;
          cantidad_usd.innerHTML = cantidad.target.value;
          combustibleCalculaTotales();
          combustibleCalculaTotalesUSD();
      });
      $('#appbundle_marinahumedacotizacion_mhcservicios_0_precioAux').keyup(function (precio_iva_mxn) {
          let dolar = Number(document.getElementById('appbundle_marinahumedacotizacion_dolar').value);
          let precio_sin_iva_mxn = (precio_iva_mxn.target.value * 100) / (100 + iva);
          let precio_sin_iva_usd = precio_sin_iva_mxn / dolar;
          precio_mxn.value = precio_sin_iva_mxn; //.toFixed(2).replace(/(\d)(?=(\d{3})+\.)/g, '$1,');
          precio_usd.dataset.valor = precio_sin_iva_usd.toFixed(2).replace(/(\d)(?=(\d{3})+\.)/g, '$1,');
          precio_usd.innerHTML = precio_sin_iva_usd.toFixed(2).replace(/(\d)(?=(\d{3})+\.)/g, '$1,');
          combustibleCalculaTotales();
          combustibleCalculaTotalesUSD();
      });
      $('#appbundle_marinahumedacotizacion_dolar').keyup(function (dolarval) {
          let precio_usd_aux = precio_mxn.value / dolarval.target.value;
          precio_usd.dataset.valor = precio_usd_aux.toFixed(2).replace(/(\d)(?=(\d{3})+\.)/g, '$1,');
          precio_usd.innerHTML = precio_usd_aux.toFixed(2).replace(/(\d)(?=(\d{3})+\.)/g, '$1,');
          combustibleCalculaTotalesUSD();
      });

      function combustibleCalculaTotales(){
          let subtotal = cantidad_mxn.dataset.valor * precio_mxn.value;
          let ivatot = (subtotal * iva) / 100;
          let total = subtotal + ivatot;
          document.getElementById('appbundle_marinahumedacotizacion_mhcservicios_0_subtotal').value = subtotal;//.toFixed(2).replace(/(\d)(?=(\d{3})+\.)/g, '$1,');
          document.getElementById('appbundle_marinahumedacotizacion_mhcservicios_0_iva').value = ivatot;//.toFixed(2).replace(/(\d)(?=(\d{3})+\.)/g, '$1,');
          document.getElementById('appbundle_marinahumedacotizacion_mhcservicios_0_total').value = total;//.toFixed(2).replace(/(\d)(?=(\d{3})+\.)/g, '$1,');
          document.getElementById('appbundle_marinahumedacotizacion_subtotal').value = subtotal;//.toFixed(2).replace(/(\d)(?=(\d{3})+\.)/g, '$1,');
          document.getElementById('appbundle_marinahumedacotizacion_ivatotal').value = ivatot;//.toFixed(2).replace(/(\d)(?=(\d{3})+\.)/g, '$1,');
          document.getElementById('appbundle_marinahumedacotizacion_total').value = total;//.toFixed(2).replace(/(\d)(?=(\d{3})+\.)/g, '$1,');
      }

      function combustibleCalculaTotalesUSD(){
          let subtotal = cantidad_usd.dataset.valor * precio_usd.dataset.valor;
          let ivatot = (subtotal * iva) / 100;
          let total = subtotal + ivatot;
          document.getElementById('combustible_subtotal_usd').innerHTML = subtotal.toFixed(2).replace(/(\d)(?=(\d{3})+\.)/g, '$1,');
          document.getElementById('combustible_iva_usd').innerHTML = ivatot.toFixed(2).replace(/(\d)(?=(\d{3})+\.)/g, '$1,');
          document.getElementById('combustible_total_usd').innerHTML = total.toFixed(2).replace(/(\d)(?=(\d{3})+\.)/g, '$1,');
          document.getElementById('combustible_gran_subtotal_usd').innerHTML = subtotal.toFixed(2).replace(/(\d)(?=(\d{3})+\.)/g, '$1,');
          document.getElementById('combustible_gran_iva_usd').innerHTML = ivatot.toFixed(2).replace(/(\d)(?=(\d{3})+\.)/g, '$1,');
          document.getElementById('combustible_gran_total_usd').innerHTML = total.toFixed(2).replace(/(\d)(?=(\d{3})+\.)/g, '$1,');
      }
    </script>
{% endblock %}