{% extends 'estructura/plantilla.twig' %}

{% block contwrapper %}
    <div class="content-wrapper">
        <section class="content">
            <div class="panel panel-novo">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-sm-6">
                            <h3 class="panel-title">{{ title }}</h3>
                        </div>
                        <div class="col-sm-6">
                            <a class="btn btn-contorno-azul pull-right"
                               href="{{ path('astillero_servicio-basico_index') }}">Regresar</a>
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <label>Servicio</label>
                            <div class='info-input'>{{ astilleroServicioBasico.nombre }}</div>
                        </div>
                    </div>
                    {{ form_start(edit_form) }}
                    <div class="row espacio-linea-arriba2">
                        <div class="col-sm-12">
                            {{ form_label(edit_form.precio) }} ({{ astilleroServicioBasico.divisa }})
                            {{ form_widget(edit_form.precio) }}
                        </div>
                    </div>
                    <div class="row espacio-linea-arriba2">
                        <div class="col-sm-12">
                            {{ form_row(edit_form.claveUnidad) }}
                            {{ form_row(edit_form.claveProdServ) }}
                        </div>
                    </div>
                    <div class="row espacio-linea-arriba2">
                        <div class="col-sm-12">
                            <button type="submit" class="btn btn-azul pull-right">
                                <i class="fa fa-floppy-o" aria-hidden="true"></i>
                                Guardar
                            </button>
                        </div>
                    </div>
                    {{ form_end(edit_form) }}
                </div>
            </div>
        </section>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        (function ($) {
            const baseUrl = '{{ app.request.baseUrl }}';
            $('#appbundle_astilleroserviciobasico_claveUnidad')
                .select2({ajax: {url: baseUrl + '/contabilidad/claves-sat/select2/claveunidad'}});
            $('#appbundle_astilleroserviciobasico_claveProdServ')
                .select2({ajax: {url: baseUrl + '/contabilidad/claves-sat/select2/claveprodserv'}});
        })(jQuery);
    </script>
{% endblock %}