{% set menuClientes='' %}
{% set menuMarina='' %}
{% set menuAstillero='' %}
{% set menuProductos='' %}
{% set menuRH='' %}
{% set menuConta='' %}
{% set menuReportes='' %}
{% set menuUsuarios='' %}
{% set menuAjustes='' %}

{% set actCA='' %}
{% set actCL='' %}
{% set actMAg='' %}
{% set actMA='' %}
{% set actMN='' %}
{% set actMC='' %}
{% set actAN='' %}
{% set actAC='' %}
{% set actAA='' %}
{% set actAO='' %}


{% if clienteagregar is defined %}
    {% set menuClientes =' active menu-open' %}
    {% set actCA=' active' %}
{% endif %}
{% if clientelistado is defined %}
    {% set menuClientes=' active menu-open' %}
    {% set actCL=' active' %}
{% endif %}
{% if marinaagenda is defined %}
    {% set menuMarina=' active menu-open' %}
    {% set actMAg=' active' %}
{% endif %}
{% if marinaadministracion is defined %}
    {% set menuMarina=' active menu-open' %}
    {% set actMA=' active' %}
{% endif %}
{% if marinanuevacotizacion is defined %}
    {% set menuMarina=' active menu-open' %}
    {% set actMN=' active' %}
{% endif %}
{% if marinacotizaciones is defined %}
    {% set menuMarina=' active menu-open' %}
    {% set actMC=' active' %}
{% endif %}
{% if astilleronuevacotizacion is defined %}
    {% set menuAstillero = ' active menu-open' %}
    {% set actAN = ' active' %}
{% endif %}
{% if astillerocotizaciones is defined %}
    {% set menuAstillero = ' active menu-open' %}
    {% set actAC=' active' %}
{% endif %}
{% if astilleroaceptaciones is defined %}
    {% set menuAstillero = ' active menu-open' %}
    {% set actAA=' active' %}
{% endif %}
{% if astilleroodt is defined %}
    {% set menuAstillero = ' active menu-open' %}
    {% set actAO=' active' %}
{% endif %}
{% if productos is defined %}
    {% set menuProductos=' active' %}
{% endif %}
{% if recursoshumanos is defined %}
    {% set menuRH=' active' %}
{% endif %}
{% if contabilidad is defined %}
    {% set menuConta=' active' %}
{% endif %}
{% if reportes is defined %}
    {% set menuReportes=' active' %}
{% endif %}
