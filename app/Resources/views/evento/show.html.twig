{% extends 'estructura/plantilla.twig' %}

{% block title %}
    Novonautiva | Detalle Evento
{% endblock %}

{% block contwrapper %}
    <div class="content-wrapper">
        <section class="content">
            <div class="panel panel-novo">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-sm-6">
                            <h3 class="panel-title">Detalle del evento</h3>
                        </div>
                        <div class="col-sm-6">
                            <a href="{{ path('evento_index') }}"
                               class="btn btn-contorno-azul pull-right">Regresar</a>
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-sm-6">
                            <table class="table">
                                <thead>
                                <tr>
                                    <th></th>
                                    <th></th>
                                </tr>
                                </thead>
                                <tbody>

                                <tr>
                                    <th>Título</th>
                                    <td>{{ evento.titulo }}</td>
                                </tr>
                                <tr>
                                    <th>Fecha inicio</th>
                                    <td>{% if evento.fechainicio %}{{ evento.fechainicio|date('Y-m-d') }}{% endif %}</td>
                                </tr>
                                <tr>
                                    <th>Fecha fin</th>
                                    <td>{% if evento.fechafin %}{{ evento.fechafin|date('Y-m-d') }}{% endif %}</td>
                                </tr>
                                <tr>
                                    <th>Hora inicio</th>
                                    <td>{% if evento.horainicio %}{{ evento.horainicio|date('H:i:s') }}{% endif %}</td>
                                </tr>
                                <tr>
                                    <th>Hora fin</th>
                                    <td>{% if evento.horafin %}{{ evento.horafin|date('H:i:s') }}{% endif %}</td>
                                </tr>
                                <tr>
                                    <th>Descripción</th>
                                    <td>{{ evento.descripcion }}</td>
                                </tr>
                                <tr>
                                    <th>Agregado por</th>
                                    <td>{{ evento.usuario }}</td>
                                </tr>
                                <tr>
                                    <th>Fecha de creación</th>
                                    <td>{{ evento.fecharegistro | date('d M. Y H:s') }}</td>
                                </tr>
                                <tr>
                                    <th>Visibilidad</th>
                                    <td>{% if evento.isPublico %} Público {% else %} Privado {% endif %}</td>
                                </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    {% if is_granted(expression('has_role("AGENDA_EDIT") or (user.isAdmin())')) and editable %}
                        <div class="row">
                            <div class="col-sm-6">
                                <a href="{{ path('evento_edit', { 'id': evento.id }) }}" class="btn btn-azul">
                                    <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                                    Editar
                                </a>
                            </div>
                        </div>
                    {% endif %}
                </div>
            </div>
        </section>
    </div>
{% endblock %}
