      let cantidad = document.getElementById('appbundle_marinahumedacotizacion_mhcservicios_0_cantidad');
      let precio_iva_mxn = document.getElementById('appbundle_marinahumedacotizacion_mhcservicios_0_precioAux');
      let dolar_combustible = document.getElementById('appbundle_marinahumedacotizacion_dolar');
      let iva = Number(document.getElementById('valiva').dataset.valor);

      cantidad.addEventListener('keyup',function (input) {
          document.getElementById('combustible_cantidad_mxn').innerHTML = input.target.value;
          document.getElementById('combustible_cantidad_usd').innerHTML = input.target.value;
          combustibleCalculaTotales();
      });
      precio_iva_mxn.addEventListener('keyup',function (input) {
          let precio_sin_iva_mxn = (Number(input.target.value) * 100) / (100 + iva);
          document.getElementById('appbundle_marinahumedacotizacion_mhcservicios_0_precio').value = precio_sin_iva_mxn.toFixed(2).replace(/(\d)(?=(\d{3})+\.)/g, '$1,');
          combustibleCalculaTotales();
      });
      dolar_combustible.addEventListener('keyup',function (input) {
          combustibleCalculaTotalesUSD();
      });
      function combustibleCalculaTotales(){
          let total = Number(cantidad.value) * Number(precio_iva_mxn.value);
          let ivatot = (total * iva)/(100 + iva);
          let subtotal = total - ivatot;
          document.getElementById('appbundle_marinahumedacotizacion_mhcservicios_0_subtotal').value = subtotal.toFixed(2).replace(/(\d)(?=(\d{3})+\.)/g, '$1,');
          document.getElementById('appbundle_marinahumedacotizacion_mhcservicios_0_iva').value = ivatot.toFixed(2).replace(/(\d)(?=(\d{3})+\.)/g, '$1,');
          document.getElementById('appbundle_marinahumedacotizacion_mhcservicios_0_total').value = total.toFixed(2).replace(/(\d)(?=(\d{3})+\.)/g, '$1,');
          document.getElementById('appbundle_marinahumedacotizacion_subtotal').value = subtotal.toFixed(2).replace(/(\d)(?=(\d{3})+\.)/g, '$1,');
          document.getElementById('appbundle_marinahumedacotizacion_ivatotal').value = ivatot.toFixed(2).replace(/(\d)(?=(\d{3})+\.)/g, '$1,');
          document.getElementById('appbundle_marinahumedacotizacion_total').value = total.toFixed(2).replace(/(\d)(?=(\d{3})+\.)/g, '$1,');
          combustibleCalculaTotalesUSD();
      }
      function combustibleCalculaTotalesUSD(){
          let dolar = Number(dolar_combustible.value);
          let precio_sin_iva_usd = Number((document.getElementById('appbundle_marinahumedacotizacion_mhcservicios_0_precio').value).replace(/,/g, '')) / dolar;
