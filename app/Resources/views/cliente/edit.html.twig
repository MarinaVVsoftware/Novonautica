{% extends 'estructura/plantilla.twig' %}

{% block title %}
    Novonautiva | Editar Cliente
{% endblock %}

{% block contwrapper %}
    <div class="content-wrapper">
        <section class="content">
            <div class="panel panel-novo">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-sm-6">
                            <h3 class="panel-title">Editar Cliente</h3>
                        </div>
                        <div class="col-sm-6">
                            <a class="btn btn-contorno-azul pull-right" href="{{ path('cliente_index') }}">
                                {#<i class="fa fa-arrow-left" aria-hidden="true"></i>#}
                                Regresar
                            </a>
                        </div>
                    </div>
                </div>
                <div class="panel-body panel-pestanias">
                    {{ form_start(edit_form) }}
                    <ul class="nav nav-tabs" role="tablist">
                        <li role="presentation" class="primero active">
                            <a href="#cliente" aria-controls="cliente" role="tab" data-toggle="tab">Cliente</a>
                        </li>
                        {% for barco in barcos %}
                            <li role="presentation">
                                <a href="#{{ barco.id }}" aria-controls="{{ barco.id }}" role="tab" data-toggle="tab">{{ barco }}</a>
                            </li>
                        {% endfor %}
                    </ul>
                    <div class="tab-content">
                        <div role="tabpanel" class="tab-pane active" id="cliente">
                            <div class="row">
                                <div class="col-sm-5">
                                    {{ form_row(edit_form.nombre) }}
                                    {{ form_row(edit_form.correo) }}
                                    {{ form_row(edit_form.password) }}
                                    {{ form_row(edit_form.telefono) }}
                                    {{ form_row(edit_form.celular) }}
                                    {{ form_row(edit_form.direccion) }}
                                </div>
                                <div class="col-sm-5">
                                    {{ form_row(edit_form.empresa) }}
                                    {{ form_row(edit_form.razonsocial) }}
                                    {{ form_row(edit_form.rfc) }}
                                    {{ form_row(edit_form.direccionfiscal) }}
                                    {{ form_row(edit_form.correofacturacion) }}
                                    <div>
                                        Estatus
                                        <span class="cont-label-novo">
                                            {{ form_errors(edit_form.estatus) }}
                                            {{ form_widget(edit_form.estatus) }}
                                            {{ form_label(edit_form.estatus) }}
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>


                        {% for i,barco in barcos %}
                        <div role="tabpanel" class="tab-pane" id="{{ barco.id }}">
                            <div class="row">
                                <div class="col-sm-5">
                                    {{ form_row(edit_form.barcos[i].nombre) }}
                                    {{ form_row(edit_form.barcos[i].marca) }}
                                    <div>
                                        Estatus
                                        <span class="cont-label-novo">
                                            {{ form_errors(edit_form.barcos[i].estatus) }}
                                            {{ form_widget(edit_form.barcos[i].estatus) }}
                                            {{ form_label(edit_form.barcos[i].estatus) }}
                                        </span>
                                    </div>
                                </div>
                                <div class="col-sm-5">
                                    {{ form_row(edit_form.barcos[i].modelo) }}
                                    {{ form_row(edit_form.barcos[i].anio) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12 espacio-linea">
                                    <hr>
                                </div>
                            </div>
                            <div id="motor-fields-list{{ barco.id }}"
                                 class="lista-motores"
                                 data-prototype="{{ form_widget(edit_form.barcos[i].motores.vars.prototype)|e('html_attr') }}">
                                {% for motorField in edit_form.barcos[i].motores %}
                                    {% form_theme motorField 'motor/form-cliente.twig' %}
                                    {{ form_widget(motorField) }}
                                {% endfor %}
                            </div>
                            <div class="row">
                                <div class="col-sm-12">
                                    <a href="#" id="" class="add-another-motor letra-azul" data-cantidad="{{ edit_form.barcos[i].motores|length }}" data-idlista="{{ barco.id }}">
                                        + Agregar Motor
                                    </a>
                                </div>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                    <div class="row">
                        <div class="col-sm-12 espacio-linea">
                            <hr>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            {#{% for barco in barcos %}#}
                                {#<a href="{{ path('barco_edit',{'id':barco.id}) }}" class="btn btn-azul">{{ barco.nombre }}</a>#}
                            {#{% endfor %}#}
                            <a href="{{ path('barco_new',{'cliente':cliente.id}) }}" class="btn btn-azul">+ Agregar Barco</a>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <input type="submit" value="Guardar" class="btn btn-azul center-block"/>
                        </div>
                    </div>

                    {{ form_end(edit_form) }}

                    <div class="row">
                        <div class="col-sm-12">
                            {{ form_start(delete_form) }}
                            <input type="submit" value="Borrar" class="btn btn-borrar pull-right">
                            {{ form_end(delete_form) }}
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %}
