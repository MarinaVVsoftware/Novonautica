{% extends 'estructura/plantilla.twig' %}

{% block title %}
    Novonautiva | Agregar Cliente
{% endblock %}

{% block contwrapper %}
    <div class="content-wrapper">
        <section class="content">
            <div class="panel panel-novo">
                <div class="panel-heading">
                    <h3 class="panel-title">Nuevo Cliente</h3>
                </div>
                <div class="panel-body">
                    {{ form_start(form) }}
                    <div class="row">
                        <div class="col-sm-5">
                            {{ form_row(form.nombre) }}
                            {{ form_row(form.correo) }}
                            {{ form_row(form.password) }}
                            {{ form_row(form.telefono) }}
                            {{ form_row(form.celular) }}
                            {{ form_row(form.direccion) }}
                        </div>
                        <div class="col-sm-5">
                            {{ form_row(form.empresa) }}
                            {{ form_row(form.razonsocial) }}
                            {{ form_row(form.rfc) }}
                            {{ form_row(form.direccionfiscal) }}
                            {{ form_row(form.correofacturacion) }}

                            <div>
                                Estatus Cliente
                                <span class="cont-label-novo">
                                {{ form_errors(form.estatus) }}
                                    {{ form_widget(form.estatus,{'attr': {'checked': 'true'}}) }}
                                    {{ form_label(form.estatus) }}
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12 espacio-linea">
                            <hr>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-5">
                            {{ form_row(form.barcos.children[0].nombre) }}
                            {{ form_row(form.barcos.children[0].marca) }}

                            <div>
                                Estatus Barco
                                <span class="cont-label-novo">
                                    {{ form_errors(form.barcos.children[0].estatus) }}
                                    {{ form_widget(form.barcos.children[0].estatus,{'attr':{'checked':'true'}}) }}
                                    {{ form_label(form.barcos.children[0].estatus) }}
                                </span>
                            </div>

                        </div>
                        <div class="col-sm-5">
                            {{ form_row(form.barcos.children[0].modelo) }}
                            {{ form_row(form.barcos.children[0].anio) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12 espacio-linea">
                            <hr>
                        </div>
                    </div>

                    <div id="motor-fields-list"
                         data-prototype="{{ form_row(form.barcos.children[0].motores.vars.prototype)|e }}">
                        {% for motorField in form.barcos.children[0].motores %}
                            {% form_theme motorField 'motor/form-cliente.twig' %}
                            {{ form_row(motorField) }}
                            {#<div class="row motor-lista">#}
                                {#<div class="col-sm-5">#}
                                    {#{{ form_row(motorField.marca) }}#}
                                    {#{{ form_row(motorField.modelo) }}#}
                                    {#{{ form_row(motorField.calado) }}#}
                                    {#{{ form_row(motorField.manga) }}#}
                                {#</div>#}
                                {#<div class="col-sm-5">#}
                                    {#{{ form_row(motorField.eslora) }}#}
                                    {#{{ form_row(motorField.combustible) }}#}
                                    {#{{ form_row(motorField.agua) }}#}
                                    {#<div>#}
                                        {#Estatus Motor#}
                                        {#<span class="cont-label-novo">#}
                                        {#{{ form_errors(motorField.estatus) }}#}
                                            {#{{ form_widget(motorField.estatus,{'attr':{'checked':'true'}}) }}#}
                                            {#{{ form_label(motorField.estatus) }}#}
                                    {#</span>#}
                                    {#</div>#}
                                {#</div>#}
                            {#</div>#}
                        {% endfor %}
                    </div>

                    <a href="#" id="add-another-motor" data-cantidad="{{ form.barcos.children[0].motores|length }}">+
                        Agregar Motor</a>

                    <div class="row">
                        <div class="col-sm-12">
                            <input type="submit" value="Guardar" class="btn btn-azul pull-right"/>
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </section>
    </div>
{% endblock %}
