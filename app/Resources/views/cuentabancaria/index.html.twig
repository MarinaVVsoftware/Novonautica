{% extends 'estructura/plantilla.twig' %}
{% block contwrapper %}
<div class="content-wrapper">
    <section class="content">
        <div class="panel panel-novo">
            <div class="panel-heading">
                <h3 class="panel-title">{{ title }}</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-sm-12">
                        <table class="table">
                            <thead>
                            <tr>
                                <th>Empresa</th>
                                <th>Moneda</th>
                                <th>Banco</th>
                                <th>Sucursal</th>
                                <th>Clabe</th>
                                <th>Num. Cuenta</th>
                                <th>Raz√≥n Social</th>
                                <th>R.F.C.</th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for cuenta in cuentaBancarias %}
                                <tr>
                                    <td>{{ cuenta.empresaNombre }}</td>
                                    <td>{{ cuenta.monedaNombre }}</td>
                                    <td>{{ cuenta.banco }}</td>
                                    <td>{{ cuenta.sucursal }}</td>
                                    <td>{{ cuenta.clabe }}</td>
                                    <td>{{ cuenta.numCuenta }}</td>
                                    <td>{{ cuenta.razonSocial }}</td>
                                    <td>{{ cuenta.rfc }}</td>
                                    <td>
                                        <a class="btn btn-azul" href="{{ path('cuenta-bancaria_edit', { 'id': cuenta.id }) }}">Editar</a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
            <div class="panel-footer">
                <a href="{{ path('cuenta-bancaria_new') }}" class="btn btn-azul">
                    <i class="fa fa-plus" aria-hidden="true"></i>
                    Agregar Cuenta
                </a>
            </div>
        </div>
    </section>
</div>
{% endblock %}
