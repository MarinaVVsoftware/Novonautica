{% extends 'estructura/plantilla.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <style>
        .p-0{
            padding: 0 !important;
        }
        .help-block{
            color: #dd4b39;
        }

        .novo-checkbox-container .checkbox {
            position: relative;
            padding: 20px 0 20px 20px;
            text-align: left;
        }

        .novo-checkbox-container .checkbox label {
            cursor: pointer;
            padding-left: 10px;
        }

        .novo-checkbox-container .checkbox label:before,
        .novo-checkbox-container .checkbox label:after {
            content: '';
            position: absolute;
            top: 50%;
        }

        .novo-checkbox-container .checkbox label:before {
            left: 0;
            width: 20px;
            height: 20px;
            margin: -10px 0 0;
            border-radius: 4px;
            background: #3e4766;
            -webkit-box-shadow: 0 0 1px grey;
            box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.5), 0 1px 0 rgba(255, 255, 255, 0.4);
        }

        .novo-checkbox-container .checkbox label:after {
            width: 14px;
            height: 8px;
            top: 24px;
            left: 3px;
            border: 3px solid #0097f6;
            border-top: none;
            border-right: none;
            background: transparent;
            opacity: 0;
            -webkit-transform: rotate(-45deg);
            transform: rotate(-45deg);
        }

        .novo-checkbox-container .checkbox label:hover:after {
            opacity: .5;
        }

        .novo-checkbox-container .checkbox input[type="radio"],
        .novo-checkbox-container .checkbox input[type="checkbox"] {
            position: absolute;
            top: 0;
            left: -9999px;
            visibility: hidden;
        }

        .novo-checkbox-container .checkbox input[type="radio"]:checked + label:after,
        .novo-checkbox-container .checkbox input[type="checkbox"]:checked + label:after {
            opacity: 1;
        }
    </style>
{% endblock %}
{% block contwrapper %}
    <div class="content-wrapper">
        <section class="content">
            {{ form_start(form) }}
            <div class="panel panel-novo">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-sm-6">
                            <h3 class="panel-title">{{ title }}</h3>
                                {{ solicitud.folio }}
                        </div>
                        <div class="col-sm-6">
                            <a class="btn btn-contorno-azul pull-right" href="{{ path('almacen_show',{'id':solicitud.id }) }}">
                                Regresar
                            </a>
                        </div>
                    </div>
                </div>
                <div id="products-pane" class="panel-body">
                    <div class="row">
                        <div class="col-sm-4">
                            <label>Fecha solicitud</label>
                            <div class="info-input">
                                {% if solicitud.fecha %}
                                    {{ solicitud.fecha|date("d/m/Y") }}
                                {% endif %}
                            </div>
                        </div>
                        <div class="col-sm-4">
                            {{ form_row(form.referencia) }}
                        </div>
                        <div class="col-sm-4">
                            <div class="novo-checkbox-container">
                                {{ form_row(form.validadoAlmacen) }}
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <table class="table">
                                <thead>
                                <tr>
                                    <th width="8%">Cantidad</th>
                                    <th width="15%">Producto</th>
                                    <th>Proveedor</th>
                                    <th>Precio</th>
                                    <th>Sub-Total</th>
                                    <th>IVA {{ solicitud.iva }}%</th>
                                    <th>Total</th>
                                </tr>
                                </thead>
                                <tbody id="conceptos" class="text-center">
                                {% for concepto in solicitud.conceptos %}
                                    <tr class="servicio-agregado table-item">
                                        <td>{{ concepto.cantidad }}</td>
                                        <td>
                                            {% if concepto.marinaServicio %}
                                                {{ concepto.marinaServicio.nombre }}
                                                {% if concepto.marinaServicio.claveUnidad %}
                                                    - {{ concepto.marinaServicio.claveUnidad.nombre }}
                                                {% endif %}
                                            {% endif %}
                                            {% if concepto.combustibleCatalogo %}
                                                {{ concepto.combustibleCatalogo.nombre }}
                                                {% if concepto.combustibleCatalogo.claveUnidad %}
                                                    - {{ concepto.combustibleCatalogo.claveUnidad.nombre }}
                                                {% endif %}
                                            {% endif %}
                                            {% if concepto.astilleroProducto %}
                                                {{ concepto.astilleroProducto.nombre }}
                                                {% if concepto.astilleroProducto.claveUnidad %}
                                                    - {{ concepto.astilleroProducto.claveUnidad.nombre }}
                                                {% endif %}
                                            {% endif %}
                                            {% if concepto.tiendaProducto %}
                                                {{ concepto.tiendaProducto.nombre }}
                                                {% if concepto.tiendaProducto.claveUnidad %}
                                                    - {{ concepto.tiendaProducto.claveUnidad.nombre }}
                                                {% endif %}
                                            {% endif %}
                                        </td>
                                        <td class="p-0">
                                            {{ concepto.proveedor }}
                                        </td>
                                        <td>${{ (concepto.precio/100)|number_format(2) }} <small>MXN</small></td>
                                        <td>${{ (concepto.subtotal/100)|number_format(2) }} <small>MXN</small></td>
                                        <td>${{ (concepto.ivatotal/100)|number_format(2) }} <small>MXN</small></td>
                                        <td>${{ (concepto.total/100)|number_format(2) }} <small>MXN</small></td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6 col-sm-offset-6 text-right">
                            <h4 class="letra-azul">Sub-Total</h4>
                            <hr>
                            <h4>MX$ {{ (solicitud.subtotal / 100)|number_format(2) }}</h4>
                            <h4 class="letra-azul">IVA {{ solicitud.iva|number_format(2) }}%</h4>
                            <hr>
                            <h4>MX$ {{ (solicitud.ivatotal / 100)|number_format(2) }}</h4>
                            <h4 class="letra-azul">Total</h4>
                            <hr>
                            <h4>MX$ {{ (solicitud.total / 100)|number_format(2) }}</h4>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-8">
                            {{ form_row(form.notaAlmacen) }}
                        </div>
                    </div>
                    <div class="row espacio-linea-arriba2">
                        <div class="col-sm-6">
                            <button id="submit-btn" class="btn btn-azul">
                                <i class="fa fa-floppy-o" aria-hidden="true"></i>
                                Guardar
                            </button>
                        </div>
                    </div>

                </div>
                <div class="panel-footer">

                </div>
            </div>
            {{ form_end(form) }}
        </section>
    </div>
{% endblock %}