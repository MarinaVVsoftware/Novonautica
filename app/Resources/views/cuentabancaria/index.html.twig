{% extends 'estructura/plantilla.twig' %}

{% block title %}
{% endblock %}

{% block contwrapper %}
<div class="content-wrapper">
    <section class="content">
        <div class="panel panel-novo">
            <div class="panel-heading">
                <h3 class="panel-title">Cuentas de Banco</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-sm-8">
                        <table class="table">
                            <thead>
                            <tr>
                                <th>Banco</th>
                                <th>Clabe</th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for cuentaBancarium in cuentaBancarias %}
                                <tr>
                                    <td>{{ cuentaBancarium.banco }}</td>
                                    <td>{{ cuentaBancarium.clabe }}</td>
                                    <td>
                                        <a class="btn btn-azul" href="{{ path('cuenta-bancaria_edit', { 'id': cuentaBancarium.id }) }}">Editar</a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
            <div class="panel-footer">
                <a href="{{ path('cuenta-bancaria_new') }}" class="btn btn-azul">
                    <i class="fa fa-plus" aria-hidden="true"></i>
                    Agregar Cuenta
                </a>
            </div>
        </div>
    </section>
</div>
{% endblock %}
