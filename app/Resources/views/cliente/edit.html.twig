{% extends 'estructura/plantilla.twig' %}

{% block title %}
    Novonautiva | Editar Cliente
{% endblock %}

{% block contwrapper %}
    <div class="content-wrapper">
        <section class="content">
            <div class="panel panel-novo">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-sm-6">
                            <h3 class="panel-title">Editar Cliente</h3>
                        </div>
                        <div class="col-sm-6">
                            <a class="btn btn-contorno-azul pull-right"
                               href="{{ path('cliente_show',{ 'id': cliente.id }) }}">
                                {#<i class="fa fa-arrow-left" aria-hidden="true"></i>#}
                                Regresar
                            </a>
                        </div>
                    </div>
                </div>
                <div class="panel-body panel-pestanias">
                    {% form_theme edit_form 'estructura/temaerror.html.twig' %}
                    {{ form_start(edit_form) }}
                    <ul class="nav nav-tabs" role="tablist">
                        <li role="presentation" class="primero active">
                            <a href="#cliente" aria-controls="cliente" role="tab" data-toggle="tab">Cliente</a>
                        </li>
                        {% for barco in barcos %}
                            <li role="presentation">
                                <a href="#{{ barco.id }}" aria-controls="{{ barco.id }}" role="tab"
                                   data-toggle="tab">{{ barco }}</a>
                            </li>
                        {% endfor %}
                    </ul>
                    <div class="tab-content">
                        <div class="row">
                            <div class="col-sm-6">
                                {{ form_errors(edit_form.nombre) }}
                                {{ form_errors(edit_form.correo) }}
                                {{ form_errors(edit_form.telefono) }}
                                {{ form_errors(edit_form.celular) }}
                                {{ form_errors(edit_form.correofacturacion) }}
                            </div>
                        </div>
                        <div role="tabpanel" class="tab-pane active" id="cliente">
                            <div class="row">
                                <div class="col-sm-5">
                                    {{ form_label(edit_form.nombre) }}
                                    {{ form_widget(edit_form.nombre) }}

                                    {{ form_label(edit_form.correo) }}
                                    {{ form_widget(edit_form.correo) }}

                                    {{ form_label(edit_form.telefono) }}
                                    {{ form_widget(edit_form.telefono) }}

                                    {{ form_label(edit_form.celular) }}
                                    {{ form_widget(edit_form.celular) }}

                                    {{ form_row(edit_form.direccion) }}
                                </div>
                                <div class="col-sm-5">
                                    {{ form_row(edit_form.empresa) }}
                                    {{ form_row(edit_form.razonsocial) }}
                                    {{ form_row(edit_form.rfc) }}
                                    {{ form_row(edit_form.direccionfiscal) }}
                                    {{ form_label(edit_form.correofacturacion) }}
                                    {{ form_widget(edit_form.correofacturacion) }}
                                    {#<div class="input-estatus">#}
                                        {#Estatus#}
                                        {#<span class="cont-label-novo">#}
                                            {#{{ form_errors(edit_form.estatus) }}#}
                                            {#{{ form_widget(edit_form.estatus) }}#}
                                            {#{{ form_label(edit_form.estatus) }}#}
                                        {#</span>#}
                                    {#</div>#}
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-12 espacio-linea">
                                    <hr>
                                </div>
                            </div>
                        </div>


                        {% for i,barco in barcos %}
                            <div role="tabpanel" class="tab-pane" id="{{ barco.id }}">
                                <div class="row">
                                    <div class="col-sm-5">
                                        {{ form_row(edit_form.barcos[i].nombre) }}
                                        {{ form_row(edit_form.barcos[i].modelo) }}
                                        {{ form_row(edit_form.barcos[i].eslora) }}
                                        {{ form_row(edit_form.barcos[i].calado) }}
                                        {{ form_row(edit_form.barcos[i].manga) }}

                                        {#<div class="input-estatus">#}
                                            {#Estatus#}
                                            {#<span class="cont-label-novo">#}
                                            {#{{ form_errors(edit_form.barcos[i].estatus) }}#}
                                                {#{{ form_widget(edit_form.barcos[i].estatus) }}#}
                                                {#{{ form_label(edit_form.barcos[i].estatus) }}#}
                                        {#</span>#}
                                        {#</div>#}
                                    </div>
                                    <div class="col-sm-5">
                                        {{ form_row(edit_form.barcos[i].nombreResponsable) }}
                                        {{ form_row(edit_form.barcos[i].telefonoResponsable) }}
                                        {{ form_row(edit_form.barcos[i].correoResponsable) }}

                                        {{ form_row(edit_form.barcos[i].nombreCapitan) }}
                                        {{ form_row(edit_form.barcos[i].telefonoCapitan) }}
                                        {{ form_row(edit_form.barcos[i].correoCapitan) }}
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-12 espacio-linea">
                                        <hr>
                                    </div>
                                </div>
                                <div id="motor-fields-list{{ barco.id }}"
                                     class="lista-motores"
                                     data-prototype="
                                                {% filter escape %}
                                                    {{ include('motor/form-cliente.twig', { 'form': edit_form.barcos[i].motores.vars.prototype }) }}
                                                    {#{{ form_widget(edit_form.barcos[i].motores.vars.prototype)|e('html_attr') }}#}
                                                {% endfilter %}
                                                ">
                                    {% for motorField in edit_form.barcos[i].motores %}
                                        {% form_theme motorField 'motor/form-cliente.twig' %}
                                        <div class="row">
                                            {{ form_widget(motorField) }}
                                        </div>
                                    {% endfor %}
                                </div>
                                <div class="row">
                                    <div class="col-sm-12">
                                        <a href="#" id="" class="add-another-motor letra-azul"
                                           data-cantidad="{{ edit_form.barcos[i].motores|length }}"
                                           data-idlista="{{ barco.id }}">
                                            + Agregar Motor
                                        </a>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>

                    <div class="row">
                        <div class="col-sm-12">
                            {#{% for barco in barcos %}#}
                            {#<a href="{{ path('barco_edit',{'id':barco.id}) }}" class="btn btn-azul">{{ barco.nombre }}</a>#}
                            {#{% endfor %}#}
                            <a href="{{ path('barco_new',{'cliente':cliente.id}) }}" class="btn btn-azul">
                                <i class="fa fa-plus" aria-hidden="true"></i>
                                Agregar Barco
                            </a>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <button type="submit" class="btn btn-azul pull-right">
                                <i class="fa fa-floppy-o" aria-hidden="true"></i>
                                Guardar
                            </button>
                        </div>
                    </div>

                    {{ form_end(edit_form) }}
                    <div class="row espacio-linea-arriba2">
                        <div class="col-sm-12">
                            <a class="btn btn-naranja pull-right"
                               href="{{ path('cliente_show',{ 'id': cliente.id }) }}">
                                <i class="fa fa-ban" aria-hidden="true"></i>
                                Cancelar
                            </a>
                        </div>
                    </div>
                    <div class="row espacio-linea-arriba2">
                        <div class="col-sm-12">
                            <button type="button" class="btn btn-borrar pull-right" data-toggle="modal"
                                    data-target="#modalBorrar">
                                <i class="fa fa-trash-o" aria-hidden="true"></i>
                                Borrar
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>


{% endblock %}

{% block modals %}
    {% embed 'estructura/modalborrar.twig' %}
        {% block botonborra %}
            {{ form_start(delete_form) }}
            <button type="submit" class="btn btn-borrar">
                <i class="fa fa-trash-o" aria-hidden="true"></i>
                Borrar
            </button>
            {{ form_end(delete_form) }}
        {% endblock %}
    {% endembed %}
{% endblock %}
