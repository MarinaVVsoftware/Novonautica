{% macro submenu(menus, current_path, start) %}
    {% import _self as macros %}
    {% set start = start + 1 %}

    <ul class="treeview-menu">
        {% for menu in menus %}
            {% set parent_path = menu.submenu is defined ? menu.path|split('/')|slice(0, -1)|join('/') : null %}
            <li class="{{ menu.submenu is defined ? 'treeview ' }} {{ menu.path == current_path or parent_path in current_path ? 'active ' }}">
                <a href="{{ menu.path|default('#') }}">
                    <i class="fa fa-{{ start % 2 ? 'minus' : 'circle-o' }}"></i> {{ menu.name }}
                    {% if menu.submenu is defined %}
                        <span class="pull-right-container"><i class="fa fa-angle-left pull-right"></i></span>
                    {% endif %}
                </a>
                {% if menu.submenu is defined %}
                    {{ macros.submenu(menu.submenu, current_path, start) }}
                {% endif %}
            </li>
        {% endfor %}
    </ul>

{% endmacro %}

{% import _self as macros %}

<aside class="main-sidebar">
    <section class="sidebar clearfix">
        <ul class="sidebar-menu" data-widget="tree">
            {% for menu in menus %}
                {% set parent_path = menu.submenu is defined ? menu.path|split('/')|slice(0, -1)|join('/') : null %}
                <li class="{{ menu.submenu is defined ? 'treeview ' }}{{ menu.path == current_path or parent_path in current_path ? 'active ' }}">
                    <a href="{{ menu.path|default('#') }}">
                        <i class="fa fa-{{ menu.icon|default('asterisk') }}"></i>
                        <span>{{ menu.name }}</span>
                        {% if menu.submenu is defined %}
                            <span class="pull-right-container"><i class="fa fa-angle-left pull-right"></i></span>
                        {% endif %}
                    </a>
                    {% if menu.submenu is defined %}
                        {{ macros.submenu(menu.submenu, current_path, 0) }}
                    {% endif %}
                </li>
                <hr>
            {% endfor %}
        </ul>
    </section>
</aside>

