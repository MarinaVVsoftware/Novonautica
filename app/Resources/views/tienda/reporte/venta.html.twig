{% extends 'estructura/plantilla.twig' %}
{% block contwrapper %}
<div class="content-wrapper">
    <section class="content">
        <div class="panel panel-novo">
            <div class="panel-heading">
                <h3 class="panel-title">{{ title }}</h3>
                <small>Divisa: MXN</small>
            </div>
            <div class="panel-body">
                {{ form_start(form) }}
                <div class="row">
                    <div class="col-sm-6">
                        <div class="input-daterange" id="rangoFehas">
                            <div class="row">
                                <div class="col-sm-6">
                                    {{ form_row(form.inicio) }}
                                </div>
                                <div class="col-sm-6">
                                    {{ form_row(form.fin) }}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        {{ form_row(form.producto) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-6">
                        {{ form_row(form.xls) }}
                    </div>
                    <div class="col-sm-6">
                        {{ form_row(form.buscar) }}
                    </div>
                </div>
                {{ form_end(form) }}
                <div class="row">
                    <div class="col-sm-12">
                        <table class="table">
                            <thead>
                            <tr>
                                <th>Fecha venta</th>
                                <th>Producto</th>
                                <th>Cantidad</th>
                                <th>Precio</th>
                                <th>Sub-Total</th>
                                <th>IVA</th>
                                <th>Descuento</th>
                                <th>Total</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for venta in ventas %}
                                <tr>
                                    <td>{{ venta['fecha'] }}</td>
                                    <td>{{ venta['producto'] }}</td>
                                    <td>{{ venta['cantidad'] }}</td>
                                    <td>{{ venta['precio'] }}</td>
                                    <td>{{ venta['subtotal'] }}</td>
                                    <td>{{ venta['iva'] }}</td>
                                    <td>{{ venta['descuento'] }}</td>
                                    <td>{{ venta['total'] }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
{% endblock %}