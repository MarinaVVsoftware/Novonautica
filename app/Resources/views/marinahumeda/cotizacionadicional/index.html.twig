{% extends 'estructura/plantilla.twig' %}

{% block title %}
    Novonautiva | Servicios Adicionales
{% endblock %}

{% block contwrapper %}
    <div class="content-wrapper">
        <section class="content">
            <div class="panel panel-novo">

                <div class="panel-heading">
                    <h3 class="panel-title">Servicios Adicionales</h3>
                </div>
                <div class="panel-body">
                    <table class="table text-center">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Descuento</th>
                            <th>Dolar</th>
                            <th>Iva</th>
                            <th>Subtotal</th>
                            <th>Ivatotal</th>
                            <th>Descuentototal</th>
                            <th>Total</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for marinaHumedaCotizacionAdicional in marinaHumedaCotizacionAdicionals %}
                            <tr>
                                <td>
                                    <a href="{{ path('marina-humeda-cotizacion-adicional_show', { 'id': marinaHumedaCotizacionAdicional.id }) }}">{{ marinaHumedaCotizacionAdicional.id }}</a>
                                </td>
                                <td>{{ marinaHumedaCotizacionAdicional.descuento }}</td>
                                <td>{{ marinaHumedaCotizacionAdicional.dolar }}</td>
                                <td>{{ marinaHumedaCotizacionAdicional.iva }}</td>
                                <td>{{ marinaHumedaCotizacionAdicional.subtotal }}</td>
                                <td>{{ marinaHumedaCotizacionAdicional.ivatotal }}</td>
                                <td>{{ marinaHumedaCotizacionAdicional.descuentototal }}</td>
                                <td>{{ marinaHumedaCotizacionAdicional.total }}</td>
                                <td>
                                    <ul>
                                        <li>
                                            <a class="btn btn-morado" href="{{ path('marina-humeda-cotizacion-adicional_show', { 'id': marinaHumedaCotizacionAdicional.id }) }}">Ver</a>
                                        </li>
                                        <li>
                                            <a class="btn btn-azul" href="{{ path('marina-humeda-cotizacion-adicional_edit', { 'id': marinaHumedaCotizacionAdicional.id }) }}">Editar</a>
                                        </li>
                                    </ul>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>

                    <ul>
                        <li>
                            <a class="btn btn-azul" href="{{ path('marina-humeda-cotizacion-adicional_new') }}">Agregar</a>
                        </li>
                    </ul>
                </div>
            </div>
        </section>
    </div>
{% endblock %}
