{% extends 'estructura/plantilla.twig' %}

{% block contwrapper %}
<div class="content-wrapper">
    <section class="content">
        <div class="panel panel-novo">
            <div class="panel-heading">
                <h3 class="panel-title">{{ title }}</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-sm-12">
                        <table class="table">
                            <thead>
                            <tr>
                                <th>Servicio</th>
                                <th>Precio</th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for astilleroServicioBasico in astilleroServicioBasicos %}
                                <tr>
                                    <td>{{ astilleroServicioBasico.nombre }}</td>
                                    <td>${{ (astilleroServicioBasico.precio/100)|number_format(2) }} {{ astilleroServicioBasico.divisa }}</td>
                                    <td>
                                        <a class="btn btn-azul" href="{{ path('astillero_servicio-basico_edit', { 'id': astilleroServicioBasico.id }) }}">
                                            <i class="fa fa-pencil-square-o"></i>
                                            Editar
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
{% endblock %}
