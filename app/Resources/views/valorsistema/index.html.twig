{% extends 'estructura/plantilla.twig' %}

{% block title %}
    Novonautica | Ajustes
{% endblock %}

{% block contwrapper %}
    <div class="content-wrapper">
        <section class="content">
            <div class="panel panel-novo">
                <div class="panel-heading">
                    <h3 class="panel-title">Valores del sistema</h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-sm-6">
                            <table class="table text-center">
                                <thead>
                                <tr>
                                    <th>Elemento</th>
                                    <th>Valor</th>
                                    <th>Unidad</th>
                                    <th></th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for valorSistema in valorSistemas %}
                                    <tr>
                                        <td>{{ valorSistema.nombre }}</td>
                                        <td>{{ valorSistema.valor }}</td>
                                        <td>{{ valorSistema.unidad }}</td>
                                        <td>
                                            <a class="btn btn-azul" href="{{ path('ajustes_edit', { 'id': valorSistema.id }) }}">
                                                <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                                                Editar
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %}
