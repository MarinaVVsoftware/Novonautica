{% extends 'estructura/plantilla.twig' %}

{% block title %}
    Novonautiva | Tarifas Marina Humeda
{% endblock %}

{% block contwrapper %}
    <div class="content-wrapper">
        <section class="content">
            <div class="panel panel-novo">
                <div class="panel-heading">
                    <h3 class="panel-title">Tarifas</h3>
                </div>
                <div class="panel-body">
                    <table class="table text-center">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Tipo</th>
                            <th>Costo</th>
                            <th>Descripci√≥n</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for marinaHumedaTarifa in marinaHumedaTarifas %}
                            <tr>
                                <td>
                                    <a href="{{ path('marinahumeda-tarifas_show', { 'id': marinaHumedaTarifa.id }) }}">{{ marinaHumedaTarifa.id }}</a>
                                </td>
                                <td>{% if marinaHumedaTarifa.tipo == 1 %}Amarre{% else %}Electricidad{% endif %}</td>
                                <td>${{ marinaHumedaTarifa.costo|number_format(2,'.',',') }}</td>
                                <td>{{ marinaHumedaTarifa.descripcion }}</td>
                                <td>
                                    <a class="btn btn-azul" href="{{ path('marinahumeda-tarifas_edit', { 'id': marinaHumedaTarifa.id }) }}">
                                        Editar
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <div class="panel-footer">
                    <div class="row">
                        <div class="col-sm-12">
                            <a class="btn btn-azul" href="{{ path('marinahumeda-tarifas_new') }}">
                                <i class="fa fa-plus" aria-hidden="true"></i>
                                Agregar
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %}
