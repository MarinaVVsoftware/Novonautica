{% endblock %}

{% block contwrapper %}

    <div class="content-wrapper">
        <section class="content">
            <div class="panel panel-novo">
                <div class="panel-heading">
                    <h3 class="panel-title">Listado Clientes</h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <table class="table table-novo">
                                <thead>
                                <tr>
                                    <th>Nombre</th>
                                    <th>Monto</th>
                                    <th></th>
                                </tr>
                                </thead>
                                {#<tbody>
                                {% for cliente in clientes %}
                                    <tr>
                                        <td>{{ cliente.id }}</td>
                                        <td>{{ cliente.nombre }}</td>
                                        <td>$ {{ (cliente.monederomarinahumeda/100)|number_format(2,'.',',') }}</td>
                                        <td>
                                            <a class="btn btn-morado-claro" href="{{ path('mh_monedero_ver', { 'id': cliente.id }) }}">Detalle</a>
                                            <a class="btn btn-azul"
