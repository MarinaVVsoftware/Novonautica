<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Cotización PDF</title>
    <link rel="stylesheet"
          type="text/css"
          href="{{ app.request.scheme ~ '://' ~ app.request.httpHost ~ asset('bower_components/bootstrap/dist/css/bootstrap.min.css') }}"
    >
    <style type="text/css">
        .fondo-logo {
            background: #5d6696;
            padding-top: 8px;
            padding-bottom: 8px;
        }
    </style>
</head>
<body>
<div class="container-fluid">
    <div class="row fondo-logo">
        <div class="col-xs-3 ">
            <img src="{{ app.request.scheme ~ '://' ~ app.request.httpHost ~ asset('img/logo.png') }}" class="img-responsive center-block">
        </div>
    </div>
    <div class="row">
        <div class="col-xs-8">
            <div class="row">
                <div class="col-xs-12">

                </div>
            </div>
        </div>
        <div class="col-xs-6">

        </div>
    </div>
    <div class="row">
        <div class="col-xs-8 col-xs-offset-2">

            <table class="table">
                <thead>
                <tr>
                    <th></th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <th>Folio</th>
                    <td>
                        {% if marinaHumedaCotizacion.foliorecotiza == 0 %}
                            {{ marinaHumedaCotizacion.folio }}
                        {% else %}
                            {{ marinaHumedaCotizacion.folio }}-{{ marinaHumedaCotizacion.foliorecotiza }}
                        {% endif %}
                    </td>
                </tr>
                <tr>
                    <th>Cliente</th>
                    <td>{{ marinaHumedaCotizacion.cliente }}</td>
                </tr>
                <tr>
                    <th>Barco</th>
                    <td>{{ marinaHumedaCotizacion.barco }}</td>
                </tr>
                <tr>
                    <th>Eslora</th>
                    <td>{{ marinaHumedaCotizacion.barco.eslora }}</td>
                </tr>
                <tr>
                    <th>Fecha llegada</th>
                    <td>{% if marinaHumedaCotizacion.fechaLlegada %}{{ marinaHumedaCotizacion.fechaLlegada|date('d-m-Y') }}{% endif %}</td>
                </tr>
                <tr>
                    <th>Fecha salida</th>
                    <td>{% if marinaHumedaCotizacion.fechaSalida %}{{ marinaHumedaCotizacion.fechaSalida|date('d-m-Y') }}{% endif %}</td>
                </tr>
                <tr>
                    <th>Descuento %</th>
                    <td>{{ marinaHumedaCotizacion.descuento }}%</td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12 text-right">
            <span>Tipo de cambio:</span>
            <div id="tipocambio" class="">{{ marinaHumedaCotizacion.dolar }} MXN</div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <small>Precios en USD</small>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <table id="mh_nuevacotizacion" class="table text-center">
                <thead>
                <tr>
                    <th>Cantidad</th>
                    <th>Eslora</th>
                    <th>Servicio</th>
                    <th>Prec. Unid.</th>
                    <th>Sub-Total</th>
                    <th>IVA</th>
                    <th>Descuento</th>
                    <th>Total</th>
                </tr>
                </thead>
                <tbody>
                {% for mhservicio in marinaHumedaCotizacion.mhcservicios  %}
                    {% if mhservicio.estatus %}
                        <tr>
                            <td>{{ mhservicio.cantidad }}</td>
                            <td>{{ marinaHumedaCotizacion.barco.eslora }}</td>
                            <td>{% if mhservicio.tipo == 1 %} Días Estadia {% else %} Conexió a electricidad {% endif %}</td>
                            <td>$ {{ mhservicio.precio|number_format(2,'.',',') }}</td>
                            <td>$ {{ mhservicio.subtotal|number_format(2,'.',',') }}</td>
                            <td>$ {{ mhservicio.iva|number_format(2,'.',',') }}</td>
                            <td>$ {{ mhservicio.descuento|number_format(2,'.',',') }}</td>
                            <td>$ {{ mhservicio.total|number_format(2,'.',',') }}</td>
                        </tr>
                    {% endif %}
                {% endfor %}

                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <div id="valiva" class="" data-valor="{{ marinaHumedaCotizacion.iva }}">
                <small>IVA: {{ marinaHumedaCotizacion.iva }} %</small>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-4 col-xs-offset-8">
            <hr>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-5 col-xs-offset-7 text-right tipo-letra1">
            <p class="letra-azul">Sub-Total:</p>
            <p>
                $ <span id="gransubtot">{{ marinaHumedaCotizacion.subtotal|number_format(2,'.',',') }}</span>
                <span class="tipo-letra2">USD</span>
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-4 col-xs-offset-8">
            <hr>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-5 col-xs-offset-7 text-right tipo-letra1">
            <p class="letra-azul">I.V.A:</p>
            <p>
                $ <span id="graniva">{{ marinaHumedaCotizacion.ivatotal|number_format(2,'.',',') }}</span>
                <span class="tipo-letra2">USD</span>
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-4 col-xs-offset-8">
            <hr>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-5 col-xs-offset-7 text-right tipo-letra1">
            <p class="letra-azul">Descuento:</p>
            <p>
                $ <span id="grandescuento">{{ marinaHumedaCotizacion.descuentototal|number_format(2,'.',',') }}</span>
                <span class="tipo-letra2">USD</span>
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-4 col-xs-offset-8">
            <hr>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-5 col-xs-offset-7 text-right tipo-letra1">
            <p class="letra-azul">Total:</p>
            <p>
                $ <span id="grantot">{{ marinaHumedaCotizacion.total|number_format(2,'.',',') }}</span>
                <span class="tipo-letra2">USD</span>
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-4 col-xs-offset-8">
            <hr>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <small>Precios en MXN</small>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <table id="mh_nuevacotizacion" class="table text-center">
                <thead>
                <tr>
                    <th>Cantidad</th>
                    <th>Eslora</th>
                    <th>Servicio</th>
                    <th>Prec. Unid.</th>
                    <th>Sub-Total</th>
                    <th>IVA</th>
                    <th>Descuento</th>
                    <th>Total</th>
                </tr>
                </thead>
                <tbody>
                {% for mhservicio in marinaHumedaCotizacion.mhcservicios  %}
                    {% if mhservicio.estatus %}
                        <tr>
                            <td>{{ mhservicio.cantidad }}</td>
                            <td>{{ marinaHumedaCotizacion.barco.eslora }}</td>
                            <td>{% if mhservicio.tipo == 1 %} Días Estadia {% else %} Conexió a electricidad {% endif %}</td>
                            <td>$ {{ (mhservicio.precio * marinaHumedaCotizacion.dolar)|number_format(2,'.',',') }}</td>
                            <td>$ {{ (mhservicio.subtotal * marinaHumedaCotizacion.dolar)|number_format(2,'.',',') }}</td>
                            <td>$ {{ (mhservicio.iva * marinaHumedaCotizacion.dolar)|number_format(2,'.',',') }}</td>
                            <td>$ {{ (mhservicio.descuento * marinaHumedaCotizacion.dolar)|number_format(2,'.',',') }}</td>
                            <td>$ {{ (mhservicio.total * marinaHumedaCotizacion.dolar)|number_format(2,'.',',') }}</td>
                        </tr>
                    {% endif %}
                {% endfor %}

                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-12">
            <div id="valiva" class="" data-valor="{{ marinaHumedaCotizacion.iva }}">
                <small>IVA: {{ marinaHumedaCotizacion.iva }} %</small>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-4 col-xs-offset-8">
            <hr>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-5 col-xs-offset-7 text-right tipo-letra1">
            <p class="letra-azul">Sub-Total:</p>
            <p>
                $ <span id="gransubtot">{{ (marinaHumedaCotizacion.subtotal * marinaHumedaCotizacion.dolar)|number_format(2,'.',',') }}</span>
                <span class="tipo-letra2">MXN</span>
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-4 col-xs-offset-8">
            <hr>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-5 col-xs-offset-7 text-right tipo-letra1">
            <p class="letra-azul">I.V.A:</p>
            <p>
                $ <span id="graniva">{{ (marinaHumedaCotizacion.ivatotal * marinaHumedaCotizacion.dolar)|number_format(2,'.',',') }}</span>
                <span class="tipo-letra2">MXN</span>
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-4 col-xs-offset-8">
            <hr>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-5 col-xs-offset-7 text-right tipo-letra1">
            <p class="letra-azul">Descuento:</p>
            <p>
                $ <span id="grandescuento">{{ (marinaHumedaCotizacion.descuentototal * marinaHumedaCotizacion.dolar)|number_format(2,'.',',') }}</span>
                <span class="tipo-letra2">MXN</span>
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-4 col-xs-offset-8">
            <hr>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-5 col-xs-offset-7 text-right tipo-letra1">
            <p class="letra-azul">Total:</p>
            <p>
                $ <span id="grantot">{{ (marinaHumedaCotizacion.total * marinaHumedaCotizacion.dolar)|number_format(2,'.',',') }}</span>
                <span class="tipo-letra2">MXN</span>
            </p>
        </div>
    </div>
    <div class="row">
        <div class="col-xs-4 col-xs-offset-8">
            <hr>
        </div>
    </div>
</div>
</body>

</html>