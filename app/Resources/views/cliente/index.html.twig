{% extends 'estructura/plantilla.twig' %}

{% block title %}
    Novonautiva | Listado Clientes
{% endblock %}

{% block contwrapper %}
    <div class="content-wrapper">
        <section class="content">
            <div class="panel panel-novo">
                <div class="panel-heading">
                    <h3 class="panel-title">Listado Clientes</h3>
                </div>
                <div class="panel-body">
                    <div class="table-responsive scroll-novo">
                        <table class="table text-center">
                            <thead>
                            <tr>
                                <th>Num.</th>
                                <th>Nombre</th>
                                <th>Correo</th>
                                <th>Teléfono</th>
                                <th>Celular</th>
                                <th>Dirección</th>
                                {#<th>Fecha Registro</th>#}
                                {#<th>Hora registro</th>#}
                                <th>Empresa</th>
                                <th>Razon Social</th>
                                <th>RFC</th>
                                <th>Dirección Fiscal</th>
                                <th>Correo Facturación</th>
                                {#<th>Estatus</th>#}
                                <th>Acciones</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% set i=0 %}
                            {% for cliente in clientes|reverse %}
                                {% set i=i+1 %}
                                <tr>
                                    <td>{{ i }}</td>
                                    <td>{{ cliente.nombre }}</td>
                                    <td>{{ cliente.correo }}</td>
                                    <td>{{ cliente.telefono }}</td>
                                    <td>{{ cliente.celular }}</td>
                                    <td>{{ cliente.direccion }}</td>
                                    {#<td>{% if cliente.fecharegistro %}{{ cliente.fecharegistro|date('Y-m-d H:i:s') }}{% endif %}</td>#}
                                    {#<td>{% if cliente.horaregistro %}{{ cliente.horaregistro|date('H:i:s') }}{% endif %}</td>#}
                                    <td>{{ cliente.empresa }}</td>
                                    <td>{{ cliente.razonsocial }}</td>
                                    <td>{{ cliente.rfc }}</td>
                                    <td>{{ cliente.direccionfiscal }}</td>
                                    <td>{{ cliente.correofacturacion }}</td>
                                    {#<td>{% if cliente.estatus %}Activado{% else %}Desactivado{% endif %}</td>#}
                                    <td>
                                        <a class="btn btn-morado-claro"
                                           href="{{ path('cliente_show', { 'id': cliente.id }) }}">Detalle</a>
                                        <a class="btn btn-azul" href="{{ path('cliente_edit', { 'id': cliente.id }) }}">Editar</a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %}
