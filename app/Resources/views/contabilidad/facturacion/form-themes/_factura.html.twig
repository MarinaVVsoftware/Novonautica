{% block precio_widget %}
    <div class="input-group">
        <span class="input-group-addon"
              style="border-radius: 0; background: transparent"
        >$</span>
        <input type="text"
                {{ block('widget_attributes') }}
                {{ value is empty ?: 'value=' ~ value }}
               style="border-radius: 0; background: transparent; font-size: 1.5em; text-align: right"
               readonly
        >
    </div>
{% endblock %}

{% block _appbundle_contabilidad_facturacion_iva_widget %}
    {{ block('precio_widget') }}
{% endblock %}
{% block _appbundle_contabilidad_facturacion_subtotal_widget %}
    {{ block('precio_widget') }}
{% endblock %}
{% block _appbundle_contabilidad_facturacion_descuento_widget %}
        {{ block('precio_widget') }}
{% endblock %}
{% block _appbundle_contabilidad_facturacion_total_widget %}
        {{ block('precio_widget') }}
{% endblock %}