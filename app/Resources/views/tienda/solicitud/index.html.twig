{% extends 'estructura/plantilla.twig' %}

{% block title %}
    Novonautiva | Servicios Adicionales
{% endblock %}

{% block contwrapper %}
    <div class="content-wrapper">
        <section class="content">
            <div class="panel panel-novo">

                <div class="panel-heading">
                    <h3 class="panel-title">Solicitudes</h3>
                </div>
                <div class="panel-body">
                    <div class="table-responsive scroll-novo">
                        <table class="table text-center">
                            <thead>
                            <tr>
                                <th>Fecha</th>
                                <th>Cliente</th>
                                <th>Embarcaci√≥n</th>
                                <th>Solicitud Especial</th>
                                <th>Total</th>
                                <th>Status</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for solicitud in solicituds %}
                                <tr>
                                    <td>{{ solicitud.fecha|date("m/d/Y") }}</td>
                                    <td>Por definir</td>
                                    <td>{{ solicitud.embarcacion }}</td>
                                    <td>{{ solicitud.solicitudEspecial }}</td>
                                    <td>200 dineros</td>
                                    <td>{{ solicitud.estado }}</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %}
