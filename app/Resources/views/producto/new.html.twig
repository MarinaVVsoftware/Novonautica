{% extends 'estructura/plantilla.twig' %}

{% block title %}
    Novonautiva | Agregar producto
{% endblock %}

{% block contwrapper %}
    <div class="content-wrapper">
        <section class="content">
            <div class="panel panel-novo">
                <div class="panel-heading">
                    <h3 class="panel-title">Nuevo Producto</h3>
                </div>
                <div class="panel-body">
                    {% form_theme form 'estructura/temaerror.html.twig' %}
                    {{ form_start(form) }}
                    <div class="row">
                        <div class="col-sm-6">
                            {{ form_errors(form.nombre) }}
                            {{ form_errors(form.codigo) }}
                            {{ form_errors(form.descripcion) }}
                            {{ form_errors(form.precio) }}
                            {{ form_errors(form.cantidad) }}
                            {{ form_errors(form.unidad) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            {{ form_label(form.nombre) }}
                            {{ form_widget(form.nombre) }}

                            {{ form_label(form.codigo) }}
                            {{ form_widget(form.codigo) }}

                            {{ form_label(form.descripcion) }}
                            {{ form_widget(form.descripcion) }}

                            {{ form_label(form.precio) }}
                            {{ form_widget(form.precio) }}

                            {{ form_label(form.cantidad) }}
                            {{ form_widget(form.cantidad) }}

                            {{ form_label(form.unidad) }}
                            {{ form_widget(form.unidad) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <button type="submit" class="btn btn-azul pull-right">
                                <i class="fa fa-floppy-o" aria-hidden="true"></i>
                                Guardar
                            </button>
                        </div>
                    </div>
                    {{ form_end(form) }}
                    <div class="row espacio-linea-arriba2">
                        <div class="col-sm-12">
                            <a class="btn btn-naranja pull-right" href="{{ path('producto_index') }}">
                                <i class="fa fa-ban" aria-hidden="true"></i>
                                Cancelar
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %}
