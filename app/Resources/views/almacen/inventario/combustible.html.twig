{% extends 'estructura/plantilla.twig' %}
{% block contwrapper %}
    <div class="content-wrapper">
        <section class="content">
            <div class="panel panel-novo">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        {{ title }}
                        {% if is_granted('ROLE_INVENTARIO_MODIFICAR') %}
                        <a href="{{ path('almacen_modificacion_new', {e: empresa.id}) }}" class="pull-right btn btn-azul" style="color: #fff">
                            Modificar Inventario
                        </a>
                        {% endif %}
                    </h3>
                </div>
                <div class="panel-body">
                    <table class="table table-novo table-condensed text-center">
                        <thead>
                        <tr>
                            <th>Combustible</th>
                            <th>Precio</th>
                            <th>Cuota IESPS</th>
                            <th>Existencias</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for c in catalogo %}
                            <tr>
                                <td>{{ c.nombre }}</td>
                                <td>$ {{ (c.precio/100)|number_format(2) }} <small>MXN</small></td>
                                <td>{{ c.cuotaIesps }}</td>
                                <td>{% if c.existencia %}
                                        {{ c.existencia }}
                                    {% else %}
                                        0.00
                                    {% endif %}
                                    lts
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </section>
    </div>
{% endblock %}
