{% extends 'estructura/plantilla.twig' %}

{% block title %}
    Novonautiva | Ver Cliente
{% endblock %}

{% block contwrapper %}
    <div class="content-wrapper">
        <section class="content">
            <div class="panel panel-novo">
                <div class="panel-heading">
                    <h3 class="panel-title">Detalle cliente:  {{ cliente.nombre }}</h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <table class="table">
                                <thead>
                                <tr>
                                    <th></th>
                                    <th></th>
                                </tr>
                                </thead>
                                <tbody>
                                <tr>
                                    <th>Id</th>
                                    <td>{{ cliente.id }}</td>
                                </tr>
                                <tr>
                                    <th>Nombre</th>
                                    <td>{{ cliente.nombre }}</td>
                                </tr>
                                <tr>
                                    <th>Correo</th>
                                    <td>{{ cliente.correo }}</td>
                                </tr>
                                <tr>
                                    <th>Password</th>
                                    <td>{{ cliente.password }}</td>
                                </tr>
                                <tr>
                                    <th>Teléfono</th>
                                    <td>{{ cliente.telefono }}</td>
                                </tr>
                                <tr>
                                    <th>Celular</th>
                                    <td>{{ cliente.celular }}</td>
                                </tr>
                                <tr>
                                    <th>Dirección</th>
                                    <td>{{ cliente.direccion }}</td>
                                </tr>
                                <tr>
                                    <th>Fecha Registro</th>
                                    <td>{% if cliente.fecharegistro %}{{ cliente.fecharegistro|date('Y-m-d H:i:s') }}{% endif %}</td>
                                </tr>
                                <tr>
                                    <th>Hora Registro</th>
                                    <td>{% if cliente.horaregistro %}{{ cliente.horaregistro|date('H:i:s') }}{% endif %}</td>
                                </tr>
                                <tr>
                                    <th>Empresa</th>
                                    <td>{{ cliente.empresa }}</td>
                                </tr>
                                <tr>
                                    <th>Razon Social</th>
                                    <td>{{ cliente.razonsocial }}</td>
                                </tr>
                                <tr>
                                    <th>RFC</th>
                                    <td>{{ cliente.rfc }}</td>
                                </tr>
                                <tr>
                                    <th>Dirección Fiscal</th>
                                    <td>{{ cliente.direccionfiscal }}</td>
                                </tr>
                                <tr>
                                    <th>Correo Facturacion</th>
                                    <td>{{ cliente.correofacturacion }}</td>
                                </tr>
                                <tr>
                                    <th>Estatus</th>
                                    <td>{% if cliente.estatus %}Activado{% else %}Desactivado{% endif %}</td>
                                </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4">
                            <a class="btn btn-morado-claro" href="{{ path('cliente_index') }}">Regresar</a>
                            <a class="btn btn-azul" href="{{ path('cliente_edit', { 'id': cliente.id }) }}">Editar</a>
                        </div>
                        <div class="col-sm-8">
                            {{ form_start(delete_form) }}
                            <input type="submit" value="Borrar" class="btn btn-borrar pull-right">
                            {{ form_end(delete_form) }}
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %}
