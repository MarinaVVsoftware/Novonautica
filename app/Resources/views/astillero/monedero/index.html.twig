{% extends 'estructura/plantilla.twig' %}
{% block contwrapper %}
    <div class="content-wrapper">
        <section class="content">
            <div class="panel panel-novo">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-sm-12">
                            <h3 class="panel-title">{{ title }}</h3>
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <table class="table table-novo">
                                <thead>
                                <tr>
                                    <th>Nombre</th>
                                    <th>Monto</th>
                                    <th></th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for monedero in monederos %}
                                    <tr>
                                        <td>{{ monedero.nombre }}</td>
                                        <td>$ {{ (monedero.monederoAstillero/100)|number_format(2) }} <small>MXN</small></td>
                                        <td>
                                            <a class="btn btn-azul" href="{{ path('a_monedero_operacion', { 'id': monedero.id }) }}">Operacion</a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %}