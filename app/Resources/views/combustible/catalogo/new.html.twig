{% extends 'estructura/plantilla.twig' %}
{% import 'estructura/modalborrar.twig' as modal %}
{% block contwrapper %}
    <div class="content-wrapper">
        <section class="content">
            <div class="panel panel-novo">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-sm-6">
                            <h3 class="panel-title">{{ title }}</h3>
                        </div>
                        <div class="col-sm-6">
                            <a class="btn btn-contorno-azul pull-right"
                               href="{{ path('combustible_catalogo_index') }}">Regresar</a>
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-sm-12">
                            {{ form_start(form) }}
                            {{ form_widget(form) }}
                            <button type="submit" value="Create" class="btn btn-azul pull-right">
                                <i class="fa fa-floppy-o" aria-hidden="true"></i>
                                Guardar
                            </button>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
                <div class="panel-footer">
                    {{ delete_form is defined ? modal.deleteButton('Combustible') : '' }}
                </div>
            </div>
        </section>
    </div>
{% endblock %}
{% block modals %}
    {{ delete_form is defined ? modal.deleteModal(delete_form) : '' }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
      (function ($) {
        const baseUrl = '{{ app.request.baseUrl }}';

        $('#appbundle_combustible_catalogo_claveUnidad')
            .select2({ajax: {url: baseUrl + '/contabilidad/claves-sat/select2/claveunidad'}});
        $('#appbundle_combustible_catalogo_claveProdServ')
            .select2({ajax: {url: baseUrl + '/contabilidad/claves-sat/select2/claveprodserv'}});

      })(jQuery);
    </script>
{% endblock %}
