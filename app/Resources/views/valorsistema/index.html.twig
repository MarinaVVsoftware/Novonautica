{% extends 'estructura/plantilla.twig' %}

{% block title %}
    Novonautica | Ajustes
{% endblock %}

{% block contwrapper %}
    <div class="content-wrapper">
        <section class="content">
            <div class="panel panel-novo">
                <div class="panel-heading">
                    <h3 class="panel-title">Valores del sistema</h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-sm-6">
                            <table class="table">
                                <thead>
                                <tr>
                                    <th>Elemento</th>
                                    <th>Valor</th>

                                </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>Dolar</td>
                                        <td>{{ (valorSistemas.0.dolar/100)|number_format(2) }} MXN</td>
                                    </tr>
                                    <tr>
                                        <td>Iva</td>
                                        <td>{{ valorSistemas.0.iva }} %</td>
                                    </tr>
                                    <tr>
                                        <td>Folio Cotizaciones Marina Humeda</td>
                                        <td>{{ valorSistemas.0.folioMarina }}</td>
                                    </tr>
                                    <tr>
                                        <td>Días Habiles Pago Cotización Marina</td>
                                        <td>{{ valorSistemas.0.diasHabilesMarinaCotizacion }} días</td>
                                    </tr>
                                    <tr>
                                        <td>Mensaje Correo Marina Humeda</td>
                                        <td>{{ valorSistemas.0.mensajeCorreoMarina|raw }}</td>
                                    </tr>
                                    <tr>
                                        <td>Mensaje Correo Gasolina Marina Humeda</td>
                                        <td>{{ valorSistemas.0.mensajeCorreoMarinaGasolina|raw }}</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <a class="btn btn-azul"
                               href="{{ path('ajustes_edit', { 'id': valorSistemas.0.id }) }}">
                                <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                                Editar
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %}
