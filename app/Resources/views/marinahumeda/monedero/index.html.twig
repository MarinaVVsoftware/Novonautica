                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>#}
                            </table>
                        </div>
                    </div>
                </div>

            </div>
        </section>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('js/datatables.min.js') }}"></script>
    <script type="text/javascript">
      (function ($, settings) {
        $('.table-novo').DataTable({
          ...settings,
          ajax: '{{ path('mh_monedero_index') }}',
          order: [[2, 'desc']],
          createdRow: function (row, data) {
            let actionsCell = row.cells[2];
            actionsCell.innerHTML = `
            <ul class="unstyled-list list-inline" style="margin: 0">
                <li>
                <a href="${data[2]}" class="btn btn-xs btn-morado-claro">
                Detalle
                </a>
                </li>
                <li>
                <a href="${data[2]}/operacion" class="btn btn-xs btn-azul">
                Operación
                </a>
                </li>
            </ul>
            `
          },
        });
      })(jQuery, datatablesSettings);
    </script>
{% endblock %}