{% extends 'estructura/plantilla.twig' %}

{% block title %}
    Novonautica | Nuevo Barco
{% endblock %}

{% block contwrapper %}
    <div class="content-wrapper">
        <section class="content">
            <div class="panel panel-novo">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-sm-6">
                            <h3 class="panel-title">Nuevo Barco</h3>
                        </div>
                        <div class="col-sm-6">
                            <a href="{{ path('cliente_edit',{'id':cliente.id}) }}" class="btn btn-contorno-azul pull-right">
                                {#<i class="fa fa-arrow-left" aria-hidden="true"></i>#}
                                Regresar
                            </a>
                        </div>
                    </div>

                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <p><strong>Cliente: {{ cliente }}</strong></p>
                        </div>
                    </div>
                    {{ form_start(form) }}
                    <div class="row">
                        <div class="col-sm-5">
                            {{ form_row(form.nombre) }}
                            {{ form_row(form.marca) }}
                            <div>
                                <span>Estatus</span>
                                <span class="cont-label-novo">
                                    {{ form_errors(form.estatus) }}
                                    {{ form_widget(form.estatus,{'attr':{'checked':'true'}}) }}
                                    {{ form_label(form.estatus) }}
                                </span>
                            </div>
                        </div>
                        <div class="col-sm-5">
                            {{ form_row(form.modelo) }}
                            {{ form_row(form.anio) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-10">
                            <input type="submit" value="Guardar" class="btn btn-azul pull-right"/>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12 espacio-linea">
                            <hr>
                        </div>
                    </div>
                    <div id="motor-fields-list"
                         class="motores"
                         data-prototype="{{ form_widget(form.motores.vars.prototype)|e('html_attr') }}">
                        {% for motorField in form.motores %}
                            {% form_theme motorField 'motor/form-cliente.twig' %}
                            {{ form_row(motorField) }}
                        {% endfor %}
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <a href="#" id="add-another-motor" class="letra-azul" data-cantidad="{{ form.motores|length }}">
                                + Agregar Motor
                            </a>
                        </div>
                    </div>
                    {{ form_end(form) }}
                    <div class="row">
                        <div class="col-sm-12">
                            <a href="{{ path('barco_index') }}" class="btn btn-morado-claro">Regresar</a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %}
