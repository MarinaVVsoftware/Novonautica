{% block file_widget %}
    <input type="file" {{ block('widget_attributes') }}>
{% endblock %}

{% block file_label %}
    {% if label is not same as(false) -%}
        {% if not compound -%}
            {% set label_attr = label_attr|merge({'for': id}) %}
        {%- endif -%}
        {% if required -%}
            {% set label_attr = label_attr|merge({'class': (label_attr.class|default('') ~ ' required')|trim}) %}
        {%- endif -%}
        {% if label is empty -%}
            {%- if label_format is not empty -%}
                {% set label = label_format|replace({
                    '%name%': name,
                    '%id%': id,
                }) %}
            {%- else -%}
                {% set label = name|humanize %}
            {%- endif -%}
        {%- endif -%}
        <{{ element|default('label') }}{% if label_attr %}{% with { attr: label_attr } %}{{ block('attributes') }}{% endwith %}{% endif %}>
        <i class="fa fa-plus" aria-hidden="true"></i> Agregar archivo
        </{{ element|default('label') }}>
    {%- endif -%}
{% endblock %}

{% block vich_file_label %}
    <div>
        {{ form_label(form) }}
    </div>
{% endblock %}

{% block vich_file_widget %}
    {% spaceless %}
        {{ form_widget(form.file) }}
        {{ form_label(form.file) }}
        {% if download_uri %}
            <a href="{{ app.request.basePath ~ download_uri }}" target="_blank" class="adyacent-file btn btn-azul"
               style="min-width: auto;-webkit-border-radius: 0;-moz-border-radius: 0;border-radius: 0;">{{ translation_domain is same as(false) ? download_label : download_label|trans({}, translation_domain) }}</a>
        {% endif %}
        {% if form.delete is defined %}
            {{ form_row(form.delete) }}
        {% endif %}
    {% endspaceless %}
{% endblock %}

{% block vich_image_label %}
    {{ block('vich_file_label') }}
{% endblock %}

{% block vich_image_widget %}
    {{ block('vich_file_widget') }}
{% endblock %}

{% block checkbox_radio_label -%}
    {% spaceless %}
        {%- if widget is defined -%}
            {%- if required -%}
                {%- set label_attr = label_attr|merge({class: (label_attr.class|default('') ~ ' required')|trim}) -%}
            {%- endif -%}
            {%- if parent_label_class is defined -%}
                {%- set label_attr = label_attr|merge({class: (label_attr.class|default('') ~ ' ' ~ parent_label_class)|trim}) -%}
            {%- endif -%}
            {%- if label is not same as(false) and label is empty -%}
                {%- if label_format is not empty -%}
                    {%- set label = label_format|replace({
                        '%name%': name,
                        '%id%': id,
                    }) -%}
                {%- else -%}
                    {% set label = name|humanize %}
                {%- endif -%}
            {%- endif -%}
            {{- widget|raw }}
            <label{% for attrname, attrvalue in label_attr %} {{ attrname }}="{{ attrvalue }}"{% endfor %}>
            {{ label is not same as(false) ? (translation_domain is same as(false) ? label : label|trans({}, translation_domain)) -}}
            </label>
        {%- endif -%}
    {% endspaceless %}
{%- endblock checkbox_radio_label %}
