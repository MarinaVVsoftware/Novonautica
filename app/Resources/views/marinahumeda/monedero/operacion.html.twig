{% extends 'estructura/plantilla.twig' %}

{% block title %}
    Novonautiva | Movimiento Monedero Cliente
{% endblock %}

{% block contwrapper %}
    <div class="content-wrapper">
        <section class="content">

            <div class="panel panel-novo">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-sm-6">
                            <h3 class="panel-title">{{ title }}</h3>
                        </div>
                        <div class="col-sm-6">
                            <a class="btn btn-contorno-azul pull-right"
                               href="{{ path(show,{ 'id': monederoMovimiento.cliente.id }) }}">
                                Regresar
                            </a>
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    {% for message in app.flashes('notice') %}
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="alert alert-danger">
                                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
                                    <p>{{ message }}</p>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                    {% form_theme form 'estructura/temaerror.html.twig' %}
                    {{ form_start(form) }}

                    <div class="row">
                        <div class="col-sm-6">
                            <label>Cliente</label>
                            <div class='info-input'> {{ monederoMovimiento.cliente }}</div>
                            {{ form_row(form.operacion) }}
                            {{ form_row(form.descripcion) }}
                        </div>
                        <div class="col-sm-6">
                            <label>Monto actual</label>
                            <div class='info-input'> $ {{ (montoActual/100)|number_format(2) }} {{ divisa }}</div>
                            <label>Monto a procesar {{ divisa }}</label>
                            {{ form_widget(form.monto) }}
                        </div>
                    </div>

                    <div class="row espacio-linea-arriba2">
                        <div class="col-sm-12">
                            <button type="submit" class="btn btn-azul pull-left">
                                <i class="fa fa-floppy-o" aria-hidden="true"></i>
                                Guardar
                            </button>
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </section>
    </div>
{% endblock %}