{% extends 'estructura/plantilla.twig' %}

{% block contwrapper %}
<div class="content-wrapper">
    <section class="content">
        <div class="panel panel-novo">
            <div class="panel-heading">
                <h3 class="panel-title">{{ title }}</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-sm-6">
                        <table class="table">
                            <thead>
                            <tr>
                                <th>Folio</th>
                                <th>Barco</th>
                                <th>Cliente</th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for ordenDeTrabajo in ordenDeTrabajos %}
                                <tr>
                                    <td>
                                        {% if ordenDeTrabajo.astilleroCotizacion.foliorecotiza == 0 %}
                                            {{ ordenDeTrabajo.astilleroCotizacion.folio }}
                                        {% else %}
                                            {{ ordenDeTrabajo.astilleroCotizacion.folio }}-{{ ordenDeTrabajo.astilleroCotizacion.foliorecotiza }}
                                        {% endif %}
                                    </td>
                                    <td>{{ ordenDeTrabajo.astilleroCotizacion.barco.nombre }}</td>
                                    <td>{{ ordenDeTrabajo.astilleroCotizacion.cliente.nombre }}</td>
                                    <td>
                                        {#<a class="btn btn-morado-claro" href="{{ path('ordendetrabajo_show', { 'id': ordenDeTrabajo.id }) }}">Ver</a>#}
                                        {#<a class="btn btn-azul" href="{{ path('ordendetrabajo_edit', { 'id': ordenDeTrabajo.id }) }}">Editar</a>#}
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="panel-footer">
                <a class="btn btn-azul" href="{{ path('ordendetrabajo_new') }}">
                    <i class="fa fa-plus" aria-hidden="true"></i> Nuevo ODT
                </a>
            </div>
        </div>
    </section>
</div>
{% endblock %}
