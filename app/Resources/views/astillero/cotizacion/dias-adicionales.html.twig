{% extends 'estructura/plantilla.twig' %}
{% block contwrapper %}
    <div class="content-wrapper">
        <section class="content">
            <div class="panel panel-novo">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-sm-6">
                            <h3 class="panel-title">{{ title }}</h3>
                            <span>
                                {% if astilleroDiasAdicionales.astillerocotizacion.foliorecotiza == 0 %}
                                    {{ astilleroDiasAdicionales.astillerocotizacion.folio }}
                                {% else %}
                                    {{ astilleroDiasAdicionales.astillerocotizacion.folio }}-{{ astilleroDiasAdicionales.astillerocotizacion.foliorecotiza }}
                                {% endif %}
                            </span>
                        </div>
                        <div class="col-sm-6">
                            <a class="btn btn-contorno-azul pull-right" href="{{ path('astillero_index') }}">Regresar</a>
                        </div>
                    </div>

                </div>
                <div class="panel-body panel-pestanias">
                    {{ form_start(edit_form) }}
                    <ul class="nav nav-tabs" role="tablist">
                        <li role="presentation" class="primero">
                            <a href="#generales" aria-controls="generales" role="tab" data-toggle="tab">Generales</a>
                        </li>
                        <li role="presentation">
                            <a href="#servicios" aria-controls="servicios" role="tab" data-toggle="tab">Información</a>
                        </li>
                        <li role="presentation">
                            <a href="#total" aria-controls="total" role="tab" data-toggle="tab">Total (USD)</a>
                        </li>
                        <li role="presentation">
                            <a href="#totalmxn" aria-controls="totalmxn" role="tab" data-toggle="tab">Total (MXN)</a>
                        </li>
                        <li role="presentation" class="active">
                            <a href="#validacion" aria-controls="validacion" role="tab" data-toggle="tab">Adicional</a>
                        </li>
                    </ul>
                    <div class="tab-content">
                        <div role="tabpanel" class="tab-pane" id="generales">
                            <div class="row">
                                <div class="col-sm-3">

                                    <div id="info-cliente">
                                        <label>Cliente</label>
                                        <div class='info-input'>{{ astilleroDiasAdicionales.astillerocotizacion.barco.cliente.nombre }}</div>
                                        <label>Correo electrónico</label>
                                        <div class='info-input'>{{ astilleroDiasAdicionales.astillerocotizacion.barco.cliente.correo }}</div>
                                        <label>Número de teléfono</label>
                                        <div class='info-input'>{{ astilleroDiasAdicionales.astillerocotizacion.barco.cliente.telefono }}</div>
                                        <label>Dirección</label>
                                    </div>
                                </div>
                                <div class="col-sm-3">

                                    <div id="info-barco">
                                        <label>Barco</label>
                                        <div class='info-input'>{{ astilleroDiasAdicionales.astillerocotizacion.barco.nombre }}</div>
                                        <label>Modelo</label>
                                        <div class='info-input'>{{ astilleroDiasAdicionales.astillerocotizacion.barco.modelo }}</div>
                                        <label>Eslora</label>
                                        <div class='info-input'>{{ astilleroDiasAdicionales.astillerocotizacion.barco.eslora }}</div>
                                        <label>Manga</label>
                                        <div class='info-input'>{{ astilleroDiasAdicionales.astillerocotizacion.barco.manga }}</div>
                                        <label>Nombre del capitán</label>
                                        <div class='info-input'>{{ astilleroDiasAdicionales.astillerocotizacion.barco.nombreCapitan }}</div>
                                        <label>Teléfono del capitán</label>
                                        <div class='info-input'>{{ astilleroDiasAdicionales.astillerocotizacion.barco.telefonoCapitan }}</div>
                                        <label>Correo del capitán</label>
                                        <div class='info-input'>{{ astilleroDiasAdicionales.astillerocotizacion.barco.correoCapitan }}</div>
                                    </div>
                                </div>
                                <div class="col-sm-3">
                                    <div id="info-cliente">
                                        <label>Cliente</label>
                                        <div class='info-input'>{{ astilleroDiasAdicionales.astillerocotizacion.barco.cliente.nombre }}</div>
                                        <label>Correo electrónico</label>
                                        <div class='info-input'>{{ astilleroDiasAdicionales.astillerocotizacion.barco.cliente.correo }}</div>
                                        <label>Número de teléfono</label>
                                        <div class='info-input'>{{ astilleroDiasAdicionales.astillerocotizacion.barco.cliente.telefono }}</div>
                                        <label>Dirección</label>
                                        <div class='info-input'>{{ astilleroDiasAdicionales.astillerocotizacion.barco.cliente.direccion }}</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div role="tabpanel" class="tab-pane" id="servicios">
                            <div class="row">
                                <div class="col-sm-3">
                                    <div class="input-daterange" id="rangoFehas">
                                        <div class="row">
                                            <div class="col-sm-12">
                                                <label>Fecha inicio</label>
                                                <div class='info-input'>{{ astilleroDiasAdicionales.astillerocotizacion.fechaLlegada|date('d-m-Y') }}</div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-sm-12">
                                                <label>Fecha fin</label>
                                                <div class='info-input'>{{ astilleroDiasAdicionales.astillerocotizacion.fechaSalida|date('d-m-Y') }}</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-3">
                                    <label>Días estadía</label>
                                    <div class='info-input'>{{ astilleroDiasAdicionales.astillerocotizacion.diasEstadia }}</div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-3">
                                    <label>Dolar</label>
                                    <div class='info-input'>{{ (astilleroDiasAdicionales.astillerocotizacion.dolar/100)|number_format(2) }}</div>
                                </div>
                            </div>
                        </div>
                        <div role="tabpanel" class="tab-pane" id="total">
                            <div class="row">
                                <div class="col-sm-9 text-right">
                                    <span>Tipo de cambio:</span>
                                    <div id="tipocambio" class=""
                                         data-valor="{{ astilleroDiasAdicionales.astillerocotizacion.dolar/100 }}">{{ (astilleroDiasAdicionales.astillerocotizacion.dolar/100)|number_format(2) }}
                                        MXN
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-9">
                                    <small>Precios en USD</small>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-9">
                                    <table id="a_nuevacotizacion" class="table text-center">
                                        <thead>
                                        <tr>
                                            <th>Cantidad</th>
                                            <th>Servicio</th>
                                            <th>Prec. Unid.</th>
                                            <th>Sub-Total</th>
                                            <th>IVA</th>
                                            <th>Total</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% for AstilleroServicio in astilleroDiasAdicionales.astillerocotizacion.acservicios %}
                                            {% if AstilleroServicio.estatus %}
                                                <tr>
                                                    <td>
                                                        {{ AstilleroServicio.cantidad }}
                                                        {% if AstilleroServicio.astilleroserviciobasico.id is defined and  AstilleroServicio.astilleroserviciobasico.id == 2 %}
                                                            (pie por día)
                                                        {% endif %}
                                                    </td>
                                                    {% if AstilleroServicio.astilleroserviciobasico.nombre is defined %}
                                                        <td>{{ AstilleroServicio.astilleroserviciobasico.nombre }}</td>
                                                    {% elseif AstilleroServicio.otroservicio is not null %}
                                                        <td>{{ AstilleroServicio.otroservicio }}</td>
                                                    {% elseif AstilleroServicio.producto is not null %}
                                                        <td>{{ AstilleroServicio.producto.nombre }}</td>
                                                    {% elseif AstilleroServicio.servicio is not null %}
                                                        <td>{{ AstilleroServicio.servicio.nombre }}</td>
                                                    {% endif %}
                                                    <td>$ {{ (AstilleroServicio.precio/100)|number_format(2) }}</td>
                                                    <td>$ {{ (AstilleroServicio.subtotal/100)|number_format(2) }}</td>
                                                    <td>$ {{ (AstilleroServicio.iva/100)|number_format(2) }}</td>
                                                    <td>$ {{ (AstilleroServicio.total/100)|number_format(2) }}</td>
                                                </tr>
                                            {% endif %}
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-9">
                                    <div id="valiva" class="" data-valor="{{ astilleroDiasAdicionales.astillerocotizacion.iva }}">
                                        <small>IVA: {{ astilleroDiasAdicionales.astillerocotizacion.iva }} %</small>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-4 col-sm-offset-5">
                                    <hr>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-5 col-sm-offset-4 text-right tipo-letra1">
                                    <p class="letra-azul">Sub-Total:</p>
                                    <p>
                                        $
                                        <span id="gransubtot">{{ (astilleroDiasAdicionales.astillerocotizacion.subtotal/100)|number_format(2) }}</span>
                                        <span class="tipo-letra2">USD</span>
                                    </p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-4 col-sm-offset-5">
                                    <hr>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-5 col-sm-offset-4 text-right tipo-letra1">
                                    <p class="letra-azul">I.V.A:</p>
                                    <p>
                                        $
                                        <span id="graniva">{{ (astilleroDiasAdicionales.astillerocotizacion.ivatotal/100)|number_format(2) }}</span>
                                        <span class="tipo-letra2">USD</span>
                                    </p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-4 col-sm-offset-5">
                                    <hr>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-5 col-sm-offset-4 text-right tipo-letra1">
                                    <p class="letra-azul">Total:</p>
                                    <p>
                                        $
                                        <span id="grantot">{{ (astilleroDiasAdicionales.astillerocotizacion.total/100)|number_format(2) }}</span>
                                        <span class="tipo-letra2">USD</span>
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div role="tabpanel" class="tab-pane" id="totalmxn">
                            <div class="row">
                                <div class="col-sm-9 text-right">
                                    <span>Tipo de cambio:</span>
                                    <div class=""
                                         data-valor="{{ astilleroDiasAdicionales.astillerocotizacion.dolar/100 }}">{{ (astilleroDiasAdicionales.astillerocotizacion.dolar/100)|number_format(2) }}
                                        MXN
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-9">
                                    <small>Precios en MXN</small>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-9">
                                    <table class="table text-center">
                                        <thead>
                                        <tr>
                                            <th>Cantidad</th>
                                            <th>Servicio</th>
                                            <th>Prec. Unid.</th>
                                            <th>Sub-Total</th>
                                            <th>IVA</th>
                                            <th>Total</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% for AstilleroServicio in astilleroDiasAdicionales.astillerocotizacion.acservicios %}
                                            {% if AstilleroServicio.estatus %}
                                                <tr>
                                                    <td>
                                                        {{ AstilleroServicio.cantidad }}
                                                        {% if AstilleroServicio.astilleroserviciobasico.id is defined and  AstilleroServicio.astilleroserviciobasico.id == 2 %}
                                                            (pie por día)
                                                        {% endif %}
                                                    </td>
                                                    {% if AstilleroServicio.astilleroserviciobasico.nombre is defined %}
                                                        <td>{{ AstilleroServicio.astilleroserviciobasico.nombre }}</td>
                                                    {% elseif AstilleroServicio.otroservicio is not null %}
                                                        <td>{{ AstilleroServicio.otroservicio }}</td>
                                                    {% elseif AstilleroServicio.producto is not null %}
                                                        <td>{{ AstilleroServicio.producto.nombre }}</td>
                                                    {% elseif AstilleroServicio.servicio is not null %}
                                                        <td>{{ AstilleroServicio.servicio.nombre }}</td>
                                                    {% endif %}
                                                    <td>$ {{ ((AstilleroServicio.precio*astilleroDiasAdicionales.astillerocotizacion.dolar)/10000)|number_format(2) }}</td>
                                                    <td>$ {{ ((AstilleroServicio.subtotal*astilleroDiasAdicionales.astillerocotizacion.dolar)/10000)|number_format(2) }}</td>
                                                    <td>$ {{ ((AstilleroServicio.iva*astilleroDiasAdicionales.astillerocotizacion.dolar)/10000)|number_format(2) }}</td>
                                                    <td>$ {{ ((AstilleroServicio.total*astilleroDiasAdicionales.astillerocotizacion.dolar)/10000)|number_format(2) }}</td>
                                                </tr>
                                            {% endif %}
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-9">
                                    <div  class="" data-valor="{{ astilleroDiasAdicionales.astillerocotizacion.iva }}">
                                        <small>IVA: {{ astilleroDiasAdicionales.astillerocotizacion.iva }} %</small>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-4 col-sm-offset-5">
                                    <hr>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-5 col-sm-offset-4 text-right tipo-letra1">
                                    <p class="letra-azul">Sub-Total:</p>
                                    <p>
                                        $
                                        <span>{{ ((astilleroDiasAdicionales.astillerocotizacion.subtotal*astilleroDiasAdicionales.astillerocotizacion.dolar)/10000)|number_format(2) }}</span>
                                        <span class="tipo-letra2">MXN</span>
                                    </p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-4 col-sm-offset-5">
                                    <hr>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-5 col-sm-offset-4 text-right tipo-letra1">
                                    <p class="letra-azul">I.V.A:</p>
                                    <p>
                                        $
                                        <span>{{ ((astilleroDiasAdicionales.astillerocotizacion.ivatotal*astilleroDiasAdicionales.astillerocotizacion.dolar)/10000)|number_format(2) }}</span>
                                        <span class="tipo-letra2">MXN</span>
                                    </p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-4 col-sm-offset-5">
                                    <hr>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-5 col-sm-offset-4 text-right tipo-letra1">
                                    <p class="letra-azul">Total:</p>
                                    <p>
                                        $
                                        <span>{{ ((astilleroDiasAdicionales.astillerocotizacion.total*astilleroDiasAdicionales.astillerocotizacion.dolar)/10000)|number_format(2) }}</span>
                                        <span class="tipo-letra2">MXN</span>
                                    </p>
                                </div>
                            </div>
                        </div>

                        <div role="tabpanel" class="tab-pane active" id="validacion">
                            <div class="row">
                                <div class="col-sm-6 col-sm-offset-1">
                                    <label class="tipo-letra1">Estadía</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-3">
                                    <label>Días adicionales</label>
                                    {{ form_widget(edit_form.cantidad) }}
                                </div>
                                <div class="col-sm-3">
                                    <label>Precio x pie x día (USD)</label>
                                        {{ form_widget(edit_form.precio) }}
                                </div>
                            </div>
                            <div class="row espacio-linea-arriba2">
                                <div class="col-sm-2">
                                    <button type="submit" class="btn btn-azul">
                                        <i class="fa fa-floppy-o" aria-hidden="true"></i>
                                        Guardar
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                    {% if edit_form.estatus is defined %}
                        {{ form_widget(edit_form.estatus,{'attr':{'class':'hidden'}}) }}
                    {% endif %}
                    {% if edit_form.otroservicio is defined %}
                        {{ form_widget(edit_form.otroservicio,{'attr':{'class':'hidden'}}) }}
                    {% endif %}
                    {% if edit_form.producto is defined %}
                        {{ form_widget(edit_form.producto,{'attr':{'class':'hidden'}}) }}
                    {% endif %}
                    {% if edit_form.servicio is defined %}
                        {{ form_widget(edit_form.servicio,{'attr':{'class':'hidden'}}) }}
                    {% endif %}
                    {{ form_end(edit_form) }}
                </div>
            </div>
        </section>
    </div>
{% endblock %}
