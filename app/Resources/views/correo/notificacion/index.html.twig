{% extends 'estructura/plantilla.twig' %}

{% block contwrapper %}
    <div class="content-wrapper">
        <section class="content">
            <div class="row">
                <div class="col-md-4">
                    <div class="panel panel-novo">
                        <div class="panel-heading">
                            <h3 class="panel-title">
                                Nuevo
                            </h3>
                        </div>
                        <div class="panel-body" style="min-height: initial">
                            {{ form_start(form) }}
                            {{ form_rest(form) }}
                            <input type="submit" class="btn btn-azul pull-right" value="Guardar">
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="panel panel-novo">
                        <div class="panel-heading">
                            <h3 class="panel-title">Listado de correos a notificar</h3>
                        </div>
                        <div class="panel-body no-padding">
                            <div class="table-responsive">
                                <table class="table table-novo">
                                    <thead>
                                    <tr>
                                        <th>Correo</th>
                                        <th width="25%">Evento</th>
                                        <th>Modulo</th>
                                        <th width="30%"></th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for i, notificado in notificados %}
                                        <tr>
                                            <td>{{ notificado.correo }}</td>
                                            <td>{{ notificado.evento }}</td>
                                            <td>{{ notificado.tipo }}</td>
                                            <td align="center">
                                                <a href="{{ path('historial-correo_notificacion_index', {'n': notificado.id}) }}"
                                                   class="btn btn-block btn-xs btn-azul" style="margin-bottom: 1rem;">Editar</a>
                                                {{ form_start(deleteForms[i]) }}
                                                <input type="submit" class="btn btn-block btn-xs btn-naranja"
                                                       value="Eliminar">
                                                {{ form_end(deleteForms[i]) }}
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %}