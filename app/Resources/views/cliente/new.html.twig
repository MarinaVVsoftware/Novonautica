{% extends 'estructura/plantilla.twig' %}

{% block title %}
    Novonautiva | Agregar Cliente
{% endblock %}

{% block contwrapper %}
    <div class="content-wrapper">
        <section class="content">
            <div class="panel panel-novo">
                <div class="panel-heading">
                    <h3 class="panel-title">Nuevo Cliente</h3>
                </div>
                <div class="panel-body">
                    {{ form_start(form) }}
                    <div class="row">
                        <div class="col-sm-5">
                            {{ form_row(form.nombre) }}
                            {{ form_row(form.correo) }}
                            {{ form_row(form.password) }}
                            {{ form_row(form.telefono) }}
                            {{ form_row(form.celular) }}
                            {{ form_row(form.direccion) }}
                        </div>
                        <div class="col-sm-5">
                            {{ form_row(form.empresa) }}
                            {{ form_row(form.razonsocial) }}
                            {{ form_row(form.rfc) }}
                            {{ form_row(form.direccionfiscal) }}
                            {{ form_row(form.correofacturacion) }}

                            <div class="input-estatus">
                                Estatus Cliente
                                <span class="cont-label-novo">
                                {{ form_errors(form.estatus) }}
                                    {{ form_widget(form.estatus,{'attr': {'checked': 'true'}}) }}
                                    {{ form_label(form.estatus) }}
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12 espacio-linea">
                            <hr>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-5">
                            {{ form_row(form.barcos.children[0].nombre) }}
                            {{ form_row(form.barcos.children[0].marca) }}

                            <div class="input-estatus">
                                Estatus Barco
                                <span class="cont-label-novo">
                                    {{ form_errors(form.barcos.children[0].estatus) }}
                                    {{ form_widget(form.barcos.children[0].estatus,{'attr':{'checked':'true'}}) }}
                                    {{ form_label(form.barcos.children[0].estatus) }}
                                </span>
                            </div>

                        </div>
                        <div class="col-sm-5">
                            {{ form_row(form.barcos.children[0].modelo) }}
                            {{ form_row(form.barcos.children[0].anio) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12 espacio-linea">
                            <hr>
                        </div>
                    </div>

                    <div id="motor-fields-list0"
                         class="lista-motores"
                         data-prototype="
                                    {% filter escape %}
                                    {{ include('motor/form-cliente.twig', { 'form': form.barcos.children[0].motores.vars.prototype }) }}
                                        {#{{ form_widget(form.barcos.children[0].motores.vars.prototype)|e('html_attr') }}#}
                                    {% endfilter %}
                                        ">
                        {% for motorField in form.barcos.children[0].motores %}
                            {% form_theme motorField 'motor/form-cliente.twig' %}
                            <div class="row">
                                {{ form_widget(motorField) }}
                            </div>
                        {% endfor %}
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <a href="#" id="" class="add-another-motor letra-azul" data-cantidad="{{ form.barcos.children[0].motores|length }}" data-idlista="0">
                                + Agregar Motor
                            </a>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <input type="submit" value="Guardar" class="btn btn-azul pull-right"/>
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </section>
    </div>
{% endblock %}
