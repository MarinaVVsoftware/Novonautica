{% extends 'estructura/plantilla.twig' %}

{% block title %}
    Novonautica | Ajustes Editar
{% endblock %}

{% block contwrapper %}
<div class="content-wrapper">
    <section class="content">
        <div class="panel panel-novo">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-sm-6">
                        <h3 class="panel-title">Ajustes Editar</h3>
                    </div>
                    <div class="col-sm-6">
                        <a class="btn btn-contorno-azul pull-right" href="{{ path('ajustes_index') }}">Regresar</a>
                    </div>
                </div>

            </div>
            <div class="panel-body">
                {% form_theme edit_form 'estructura/temaerror.html.twig' %}
                {{ form_start(edit_form) }}
                <div class="row">
                    <div class="col-sm-6">
                        <div class="row">
                            <div class="col-sm-9">
                                {{ form_row(edit_form.dolar )}}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-9">
                                {{ form_row(edit_form.iva )}}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-9">
                                {{ form_row(edit_form.folioMarina )}}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-9">
                                {{ form_row(edit_form.diasHabilesMarinaCotizacion )}}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-9">
                                {{ form_row(edit_form.folioAstillero )}}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-9">
                                {{ form_row(edit_form.diasHabilesAstilleroCotizacion )}}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-9">
                                {{ form_row(edit_form.porcentajeMoratorio )}}
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="row">
                            <div class="col-sm-12">
                                {{ form_row(edit_form.mensajeCorreoMarina )}}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                {{ form_row(edit_form.mensajeCorreoMarinaGasolina )}}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                {{ form_row(edit_form.mensajeCorreoAstillero )}}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row espacio-linea-arriba2">
                    <div class="col-sm-12">
                        <button type="submit" class="btn btn-azul">
                            <i class="fa fa-floppy-o" aria-hidden="true"></i>
                            Guardar
                        </button>
                    </div>
                </div>
                {{ form_end(edit_form) }}
                {#<ul>#}
                    {#<li>#}
                        {#{{ form_start(delete_form) }}#}
                        {#<input type="submit" value="Delete">#}
                        {#{{ form_end(delete_form) }}#}
                    {#</li>#}
                {#</ul>#}
            </div>
            <div class="panel-footer">
                <div class="row">
                    <div class="col-sm-12">
                        <a href="{{ path('ajustes_index') }}" class="btn btn-naranja pull-right">
                            <i class="fa fa-ban" aria-hidden="true"></i>
                            Cancelar
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
{% endblock %}
