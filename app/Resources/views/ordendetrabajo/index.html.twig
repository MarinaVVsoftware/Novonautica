{% extends 'estructura/plantilla.twig' %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/datatables.min.css') }}">
{% endblock %}
{% block contwrapper %}
<div class="content-wrapper">
    <section class="content">
        <div class="panel panel-novo">
            <div class="panel-heading">
                <h3 class="panel-title">{{ title }}</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-sm-12">
                        <table class="table table-novo">
                            <thead>
                            <tr>
                                <th>Folio</th>
                                <th>Barco</th>
                                <th>Cliente</th>
                                <th>Inicio</th>
                                <th>Fin</th>
                                <th>Precio Contratista</th>
                                <th>Utilidad V&V</th>
                                <th>Precio V&V</th>
                                <th>Iva Contratista</th>
                                <th>Total Contratista</th>
                                <th></th>
                            </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </section>
</div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('js/datatables.min.js') }}"></script>
    <script type="text/javascript">
        (function ($, settings) {
            $('.table-novo').DataTable({
                    ...settings,
                ajax: '{{ path('ordendetrabajo_index') }}',
                order: [[0, 'desc']],
                createdRow: function (row, data) {
                let actionsCell = row.cells[10];
                actionsCell.innerHTML = `
            <ul class="unstyled-list list-inline">
                <li>
                <a href="${data[10]}">
                    <i class="fa fa-eye" aria-hidden="true"></i>
                </a>
                </li>
                <li>
                <a href="${data[10]}/editar">
                    <i class="fa fa-pencil" aria-hidden="true"></i>
                </a>
                </li>
            </ul>
            `
            },
        });
        })(jQuery, datatablesSettings);
    </script>
{% endblock %}