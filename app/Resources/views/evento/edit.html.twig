{% extends 'estructura/plantilla.twig' %}

{% block title %}
    Novonautiva | Editar Evento
{% endblock %}

{% block contwrapper %}
    <div class="content-wrapper">
        <section class="content">
            <div class="panel panel-novo">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-sm-6">
                            <h3 class="panel-title">Editar Evento</h3>
                        </div>
                        <div class="col-sm-6">
                            <a href="{{ path('marina-agenda') }}" class="btn btn-contorno-azul pull-right">Regresar</a>
                        </div>
                    </div>

                </div>
                <div class="panel-body">
                    {% form_theme edit_form 'estructura/temaerror.html.twig' %}
                    {{ form_start(edit_form) }}
                    <div class="row">
                        <div class="col-sm-6">
                            {{ form_errors(edit_form.titulo) }}
                            {{ form_errors(edit_form.fechainicio) }}
                            {{ form_errors(edit_form.fechafin) }}
                            {{ form_errors(edit_form.horainicio) }}
                            {{ form_errors(edit_form.horafin) }}
                            {{ form_errors(edit_form.descripcion) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            {{ form_label(edit_form.titulo) }}
                            {{ form_widget(edit_form.titulo) }}
                        </div>
                    </div>
                    <div class="input-daterange" id="rangoFehas">
                        <div class="row">
                            <div class="col-sm-3">
                                {{ form_label(edit_form.fechainicio) }}
                                {{ form_widget(edit_form.fechainicio) }}
                            </div>
                            <div class="col-sm-3">
                                {{ form_label(edit_form.fechafin) }}
                                {{ form_widget(edit_form.fechafin) }}
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-3">
                            <p>
                                {{ form_label(edit_form.horainicio) }}
                            </p>
                            <p>
                                {{ form_widget(edit_form.horainicio) }}
                            </p>

                        </div>
                        <div class="col-sm-3">
                            <p>
                                {{ form_label(edit_form.horafin) }}
                            </p>
                            <p>
                                {{ form_widget(edit_form.horafin) }}
                            </p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            {{ form_label(edit_form.descripcion) }}
                            {{ form_widget(edit_form.descripcion) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <button type="submit" class="btn btn-azul pull-right">
                                <i class="fa fa-floppy-o" aria-hidden="true"></i>
                                Guardar
                            </button>
                        </div>
                    </div>
                    {{ form_end(edit_form) }}
                    <div class="row espacio-linea-arriba2">
                        <div class="col-sm-12">
                            <a href="{{ path('marina-agenda') }}" class="btn btn-naranja pull-right">
                                <i class="fa fa-ban" aria-hidden="true"></i>
                                Cancelar
                            </a>
                        </div>
                    </div>
                    <div class="row espacio-linea-arriba2">
                        <div class="col-sm-12">
                            <button type="button" class="btn btn-borrar pull-right" data-toggle="modal"
                                    data-target="#modalBorrar">
                                <i class="fa fa-trash-o" aria-hidden="true"></i>
                                Borrar
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %}

{% block modals %}
    {% embed 'estructura/modalborrar.twig' %}
        {% block botonborra %}
            {{ form_start(delete_form) }}
            <button type="submit" class="btn btn-borrar">
                <i class="fa fa-trash-o" aria-hidden="true"></i>
                Borrar
            </button>
            {{ form_end(delete_form) }}
        {% endblock %}
    {% endembed %}
{% endblock %}