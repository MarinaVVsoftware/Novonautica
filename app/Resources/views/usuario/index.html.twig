{% extends 'estructura/plantilla.twig' %}

{% block title %}
    Novonautiva | Usuarios
{% endblock %}

{% block contwrapper %}
    <div class="content-wrapper">
        <section class="content">
            <div class="panel panel-novo">

                <div class="panel-heading">
                    <h3 class="panel-title">Usuarios</h3>
                </div>
                <div class="panel-body">
                    <table class="table text-center">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Nombre</th>
                            <th>Correo</th>
                            <th>Nombre Usuario</th>
                            {#<th>Password</th>#}
                            <th>Estatus</th>
                            <th>Nivel</th>
                            <th>Acciones</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for usuario in usuarios %}
                            <tr>
                                {#<td><a href="{{ path('usuario_show', { 'id': usuario.id }) }}">{{ usuario.id }}</a></td>#}
                                <td>{{ usuario.id }}</td>
                                <td>{{ usuario.nombre }}</td>
                                <td>{{ usuario.correo }}</td>
                                <td>{{ usuario.username }}</td>
                                {#<td>{{ usuario.password }}</td>#}
                                <td>{% if usuario.estatus %}Activado{% else %}Desactivado{% endif %}</td>
                                <td>{{ usuario.rol }}</td>
                                <td>
                                    <a class="btn btn-morado-claro"
                                       href="{{ path('usuario_show', { 'id': usuario.id }) }}">Ver</a>
                                    <a class="btn btn-azul" href="{{ path('usuario_edit', { 'id': usuario.id }) }}">Editar</a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                    <a class="btn btn-azul" href="{{ path('usuario_new') }}">Agregar Nuevo Usuario</a>
                </div>

            </div>
        </section>
    </div>
{% endblock %}
