{% extends 'estructura/plantilla.twig' %}

{% block title %}
    Novonautiva | Ver Producto
{% endblock %}

{% block contwrapper %}
<div class="content-wrapper">
    <section class="content">
        <div class="panel panel-novo">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-sm-6">
                        <h3 class="panel-title">Detalle producto</h3>
                    </div>
                    <div class="col-sm-6">
                        <a class="btn  btn-contorno-azul pull-right" href="{{ path('producto_index') }}">
                            Regresar
                        </a>
                    </div>
                </div>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-sm-6">
                        <table class="table">
                            <thead>
                            <tr>
                                <th></th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody>
                            <tr>
                                <th>Id</th>
                                <td>{{ producto.id }}</td>
                            </tr>
                            <tr>
                                <th>Nombre</th>
                                <td>{{ producto.nombre }}</td>
                            </tr>
                            <tr>
                                <th>Código</th>
                                <td>{{ producto.codigo }}</td>
                            </tr>
                            <tr>
                                <th>Descripción</th>
                                <td>{{ producto.descripcion }}</td>
                            </tr>
                            <tr>
                                <th>Precio</th>
                                <td>{{ producto.precio }}</td>
                            </tr>
                            <tr>
                                <th>Cantidad</th>
                                <td>{{ producto.cantidad }}</td>
                            </tr>
                            <tr>
                                <th>Unidad</th>
                                <td>{{ producto.unidad }}</td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <a class="btn btn-azul" href="{{ path('producto_edit', { 'id': producto.id }) }}">
                            <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                            Editar
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
{% endblock %}
