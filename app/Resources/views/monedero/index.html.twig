{% extends 'estructura/plantilla.twig' %}

{% block title %}
    Novonautiva | Monederos Clientes
{% endblock %}

{% block contwrapper %}

    <div class="content-wrapper">
        <section class="content">
            <div class="panel panel-novo">
                <div class="panel-heading">
                    <h3 class="panel-title">Listado Clientes</h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-sm-8 col-sm-offset-2">
                            <table class="table text-center">
                                <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Nombre</th>
                                    <th>Monto</th>
                                    <th></th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for cliente in clientes %}
                                    <tr>
                                        <td>{{ cliente.id }}</td>
                                        <td>{{ cliente.nombre }}</td>
                                        <td>$ {{ cliente.montomonedero|number_format(2,'.',',') }}</td>
                                        <td>
                                            <a class="btn btn-morado-claro" href="{{ path('monedero_ver', { 'id': cliente.id }) }}">Detalle</a>
                                            <a class="btn btn-azul"
                                               href="{{ path('monedero_operacion', { 'id': cliente.id }) }}">Movimiento</a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

            </div>
        </section>
    </div>
{% endblock %}
