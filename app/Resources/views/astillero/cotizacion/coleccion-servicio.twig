{# Para colección de productos en el td valorcantidad data-tipo es: 0 = cantidad fija, 1 = promedio por pie. En caso de ser 1 se usa data-promedio #}
{# Para colección de servicios en el td valorcantidad data-tipo es: 0 = cantidad fija, 1 = cantidad basada en el eslora. #}
{% block form_widget %}
    {% spaceless %}
            <td class="valorcantidad" data-valor="0">{{ form_widget(form.cantidad) }}</td>
            <td class="td-libre"></td>
            <td class="td-otroservicio">{{ form_widget(form.otroservicio) }}</td>
            <td class="td-producto">{{ form_widget(form.producto) }}</td>
            <td class="td-servicio">{{ form_widget(form.servicio) }}</td>
            <td class="valorprecio" data-valor="0">{{ form_widget(form.precio) }}</td>
            <td class="valorsubtotal" data-valor="0">$ 0.00</td>
            <td class="valoriva" data-valor="0">$ 0.00</td>
            <td class="valortotal" data-valor="0">$ 0.00</td>
            <td class="valortipo hide">
                {{ form_widget(form.tipoCantidad) }}
            </td>
            <td class="valorpromedio hide">
                {{ form_widget(form.promedio) }}
            </td>
            <td class="valorgrupo hide">
                {{ form_widget(form.grupo) }}
            </td>
            <td>
                <a href="#" class="remove-servicio btn-xs btn-naranja">
                    <i class="fa fa-times" aria-hidden="true"></i>
                </a>
            </td>
    {% endspaceless %}
{% endblock %}
