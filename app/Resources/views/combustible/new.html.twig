          let ivatot_usd = Number((document.getElementById('appbundle_marinahumedacotizacion_mhcservicios_0_iva').value).replace(/,/g, '')) / dolar;
          let total_usd = Number((document.getElementById('appbundle_marinahumedacotizacion_mhcservicios_0_total').value).replace(/,/g, '')) / dolar;
          document.getElementById('combustible_precio_usd').innerHTML = precio_sin_iva_usd.toFixed(2).replace(/(\d)(?=(\d{3})+\.)/g, '$1,');
          document.getElementById('combustible_subtotal_usd').innerHTML = subtotal_usd.toFixed(2).replace(/(\d)(?=(\d{3})+\.)/g, '$1,');
          document.getElementById('combustible_gran_subtotal_usd').innerHTML = subtotal_usd.toFixed(2).replace(/(\d)(?=(\d{3})+\.)/g, '$1,');
          document.getElementById('combustible_iva_usd').innerHTML = ivatot_usd.toFixed(2).replace(/(\d)(?=(\d{3})+\.)/g, '$1,');
          document.getElementById('combustible_gran_iva_usd').innerHTML = ivatot_usd.toFixed(2).replace(/(\d)(?=(\d{3})+\.)/g, '$1,');
          document.getElementById('combustible_total_usd').innerHTML = total_usd.toFixed(2).replace(/(\d)(?=(\d{3})+\.)/g, '$1,');
          document.getElementById('combustible_gran_total_usd').innerHTML = total_usd.toFixed(2).replace(/(\d)(?=(\d{3})+\.)/g, '$1,');
      }
