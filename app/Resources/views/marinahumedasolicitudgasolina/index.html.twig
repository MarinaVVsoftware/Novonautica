{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('js/datatables.min.js') }}"></script>
    <script type="text/javascript">
        (function ($, settings) {
            $('.table-novo').DataTable({
                ...settings,
                ajax: '{{ path('solicitud_index_data') }}',
                order: [[5, 'desc']],
                createdRow: function (row, solicitud) {
                    console.log(solicitud);
                    let lastCell = row.cells[5];
                    lastCell.innerHTML = `
            <a class="btn btn-xs btn-block btn-azul" href="{{ 'nuevo?id=${solicitud[5]}' }}">Cotizar</a>
            `
                },
            });
        })(jQuery, datatablesSettings);
    </script>
{% endblock %}