{% extends 'estructura/plantilla.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .table > tbody > tr > td > .input-group > .input-group-addon {
            -webkit-border-radius: 0;
            -moz-border-radius: 0;
            border-radius: 0;
        }
    </style>
{% endblock %}

{% block contwrapper %}
    <div class="content-wrapper">
        <section class="content">
            <div class="panel panel-novo">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        Conceptos
                        <a class="btn btn-contorno-azul pull-right"
                           href="{{ path('tienda_inventario_registro_index_entrada') }}">
                            Regresar
                        </a>
                    </h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-4">
                            <h4>Fecha: {{ venta.createdAt|date('d/m/Y') }}</h4>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <table class="table">
                                <thead>
                                <tr>
                                    <th width="35%">Producto</th>
                                    <th>Cantidad</th>
                                    <th width="10%">% Desc.</th>
                                    <th>Precio</th>
                                    <th>Subtotal</th>
                                    <th>IVA</th>
                                    <th>Total</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for concepto in venta.conceptos %}
                                    <tr>
                                        <td>{{ concepto.producto.nombre }}</td>
                                        <td>{{ concepto.cantidad }}</td>
                                        <td>{{ concepto.descuento|number_format(2) }} %</td>
                                        <td>MX$ {{ (concepto.precioUnitario / 100)|number_format(2) }}</td>
                                        <td>MX$ {{ (concepto.subtotal / 100)|number_format(2) }}</td>
                                        <td>MX$ {{ (concepto.iva / 100)|number_format(2) }}</td>
                                        <td>MX$ {{ (concepto.total / 100)|number_format(2) }}</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4 col-sm-push-8 text-right">
                            <h4 class="letra-azul">Descuento</h4>
                            <hr>
                            <h4>MX$ {{ (venta.descuento / 100)|number_format(2) }}</h4>
                            <h4 class="letra-azul">Subtotal</h4>
                            <hr>
                            <h4>MX$ {{ (venta.subtotal / 100)|number_format(2) }}</h4>
                            <h4 class="letra-azul">IVA</h4>
                            <hr>
                            <h4>MX$ {{ (venta.iva / 100)|number_format(2) }}</h4>
                            <h4 class="letra-azul">Total</h4>
                            <hr>
                            <h4>MX$ {{ (venta.total / 100)|number_format(2) }}</h4>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
