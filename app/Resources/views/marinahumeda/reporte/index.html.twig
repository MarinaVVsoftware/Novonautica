{% extends 'estructura/plantilla.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/datatables.min.css') }}">
{% endblock %}

{% block contwrapper %}
    <div class="content-wrapper">
        <section class="content">
            <div class="panel panel-novo" style="margin-bottom: 10px;">
                <div class="panel-heading">
                    <h3 class="panel-title">Reporte de clientes</h3>
                </div>
                <div class="panel-body" style="min-height: initial">
                    <form class="row">
                        <div class="col-sm-4">
                            <div class="form-group">
                                <label for="tcliente"> Cliente con deuda mayor </label>
                                <input type="text" class="form-control" value="{{ mostDebtor['nombre'] }}" id="tcliente" disabled>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                <label for="adeudo">Adeudo total</label>
                                <div class="input-group">
                                    <span class="input-group-addon">US$</span>
                                    <input type="text" class="form-control" id="adeudo" value="{{ (mostDebtor['adeudo'] / 100)|number_format(2) }}">
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <div class="form-group">
                                <label for="abono">Abono total</label>
                                <div class="input-group">
                                    <span class="input-group-addon">US$</span>
                                    <input type="text" class="form-control" id="abono" value="{{ (mostDebtor['abono'] / 100)|number_format(2) }}">
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

            <div class="panel panel-novo">
                <div class="panel-body">
                    <table class="table-novo table text-center">
                        <thead>
                        <tr>
                            <th>Cliente</th>
                            <th>Ultimo pago</th>
                            <th>Adeudo</th>
                            <th>Abonado</th>
                            <th>Total adeudo</th>
                        </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </section>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('js/datatables.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bower_components/moment/min/moment.min.js') }}"></script>
    <script type="text/javascript" src="{{ asset('bower_components/moment/locale/es.js') }}"></script>
    <script type="text/javascript">
      (function ($, settings) {
        $('.table-novo').DataTable({
          ...settings,
          ajax: '{{ path('marina-humeda_reporte_index_data') }}',
          order: [[1, 'asc']],
          createdRow: function (row, cliente) {
            moment.locale('es');
            let dateCell = row.cells[1];
            let lastPayment = moment(cliente[1], 'YYYY-MM-DD HH:mm:ss', true);
            if(lastPayment.isValid()) {
              dateCell.innerHTML = lastPayment.fromNow();
            }
          },
        });
      })(jQuery, datatablesSettings);
    </script>
{% endblock %}