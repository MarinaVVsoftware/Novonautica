{% extends 'estructura/plantilla.twig' %}

{% block title %}
    Novonautiva | Usuarios editar
{% endblock %}

{% block contwrapper %}
    <div class="content-wrapper">
        <section class="content">
            <div class="panel panel-novo">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-sm-6">
                            <h3 class="panel-title">Editar Usuario</h3>
                        </div>
                        <div class="col-sm-6">
                            <a href="{{ path('usuario_show',{ 'id': usuario.id }) }}" class="btn btn-contorno-azul pull-right">
                                Regresar
                            </a>
                        </div>
                    </div>

                </div>
                <div class="panel-body">
                    {% form_theme edit_form 'estructura/temaerror.html.twig' %}
                    {{ form_start(edit_form) }}
                    <div class="row">
                        <div class="col-sm-6">
                            {{ form_errors(edit_form.nombre) }}
                            {{ form_errors(edit_form.correo) }}
                            {{ form_errors(edit_form.username) }}
                            {{ form_errors(edit_form.estatus) }}
                            {{ form_errors(edit_form.password.first) }}
                            {{ form_errors(edit_form.password.second) }}
                            {{ form_errors(edit_form.rol) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <p>
                                {{ form_label(edit_form.nombre) }}
                            </p>
                            <p>
                                {{ form_widget(edit_form.nombre) }}
                            </p>
                            <p>
                                {{ form_label(edit_form.correo) }}
                            </p>
                            <p>
                                {{ form_widget(edit_form.correo) }}
                            </p>
                            <p>
                                {{ form_label(edit_form.username) }}
                            </p>
                            <p>
                                {{ form_widget(edit_form.username) }}
                            </p>
                            <p>
                                Estatus
                                <span class="cont-label-novo">
                                    {{ form_widget(edit_form.estatus) }}
                                    {{ form_label(edit_form.estatus) }}
                                </span>
                            </p>

                        </div>
                        <div class="col-md-3">
                            <p>
                                {{ form_label(edit_form.password.first) }}
                            </p>
                            <p>
                                {{ form_widget(edit_form.password.first) }}
                            </p>
                            <p>
                                {{ form_label(edit_form.password.second) }}
                            </p>
                            <p>
                                {{ form_widget(edit_form.password.second) }}
                            </p>
                            <p>
                                {{ form_label(edit_form.rol) }}
                            </p>
                            <p>
                                {{ form_widget(edit_form.rol) }}
                            </p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <button type="submit" class="btn btn-azul pull-right">
                                <i class="fa fa-floppy-o" aria-hidden="true"></i>
                                Guardar
                            </button>
                        </div>
                    </div>
                    {{ form_end(edit_form) }}
                    <div class="row espacio-linea-arriba2">
                        <div class="col-sm-6">
                            <a class="btn btn-naranja pull-right" href="{{ path('usuario_show',{ 'id': usuario.id }) }}">
                                <i class="fa fa-ban" aria-hidden="true"></i>
                                Cancelar
                            </a>
                        </div>
                    </div>
                    <div class="row espacio-linea-arriba2">
                        <div class="col-sm-6">
                            <button type="button" class="btn btn-borrar pull-right" data-toggle="modal"
                                    data-target="#modalBorrar">
                                <i class="fa fa-trash-o" aria-hidden="true"></i>
                                Borrar
                            </button>
                        </div>
                    </div>


                </div>
            </div>
        </section>
    </div>
{% endblock %}
{% block modalborrar %}
    {% embed 'estructura/modalborrar.twig' %}
        {% block botonborra %}
            {{ form_start(delete_form) }}
            <button type="submit" class="btn btn-borrar">
                <i class="fa fa-trash-o" aria-hidden="true"></i>
                Borrar
            </button>
            {{ form_end(delete_form) }}
        {% endblock %}
    {% endembed %}
{% endblock %}