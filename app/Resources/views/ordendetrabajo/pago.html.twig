{% extends 'estructura/plantilla.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        :root .content-wrapper hr {
            margin-top: 1rem !important;
            margin-bottom: 1rem !important;
        }

        .table > tbody > tr.pago-agregado > td .input-group-addon {
            border-radius: 0;
        }

        .table > tbody > tr.pago-agregado > td {
            padding: 0;
        }
    </style>
{% endblock %}
{% block contwrapper %}
    {% set dolar = contratista.astilleroODT.astilleroCotizacion.dolar %}
    <div class="content-wrapper">
        <section class="content">
            <div class="row">
                <div class="col-md-12">
                    {% for message in app.flashes('notice') %}
                        <div class="alert alert-danger">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×
                            </button>
                            {{ message }}
                        </div>
                    {% endfor %}
                </div>
            </div>
            <div class="panel panel-novo">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-sm-6">
                            <h3 class="panel-title">{{ title }}</h3>
                            <span>
                                 {% if contratista.astilleroODT.astilleroCotizacion.foliorecotiza == 0 %}
                                     {{ contratista.astilleroODT.astilleroCotizacion.folio }}
                                 {% else %}
                                     {{ contratista.astilleroODT.astilleroCotizacion.folio }}-{{ contratista.astilleroODT.astilleroCotizacion.foliorecotiza }}
                                 {% endif %}
                            </span>
                        </div>
                        <div class="col-sm-6">
                            <a href="{{ path('ordendetrabajo_show',{'id':contratista.astilleroODT.id}) }}"
                               class="btn btn-contorno-azul pull-right">
                                Regresar
                            </a>
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-sm-3">
                            <label>Trabajo</label>
                            <div class='info-input'>{{ contratista.cotizacionInicial }}</div>
                        </div>
                        <div class="col-sm-3">
                            <label>Contratista</label>
                            <div class='info-input'>{{ contratista.proveedor.nombre }}</div>
                        </div>
                        <div class="col-sm-3">
                            <label>Razón social</label>
                            <div class='info-input'>{{ contratista.proveedor.razonsocial }}</div>
                        </div>
                        <div class="col-sm-3">
                            <label>Tipo de cambio</label>
                            <div class='info-input'>
                                $ {{ (dolar/100)|number_format(2) }} MXN
                            </div>
                        </div>
                    </div>
                    <div class="row espacio-linea-arriba2 espacio-linea-abajo2">
                        <div class="col-sm-12">
                            <hr>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4">
                            <label>Precio contratista</label>
                            <div class='info-input'>$ {{ (contratista.precio/100)|number_format(2) }} USD</div>
                            <br>
                            <div class='info-input'>
                                $ {{ (contratista.precio*dolar/10000)|number_format(2) }} MXN
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <label>IVA {{ contratista.astilleroODT.astilleroCotizacion.iva }}%</label>
                            <div class='info-input'>$ {{ (contratista.ivatot/100)|number_format(2) }} USD</div>
                            <br>
                            <div class='info-input'>
                                $ {{ (contratista.ivatot*dolar/10000)|number_format(2) }} MXN
                            </div>
                        </div>
                        <div class="col-sm-4">
                            <label>Total</label>
                            <div class='info-input'>$ {{ (contratista.total/100)|number_format(2) }} USD</div>
                            <br>
                            <div class='info-input'>
                                $ {{ (contratista.total*dolar/10000)|number_format(2) }} MXN
                            </div>
                        </div>
                    </div>
                    <div class="row espacio-linea-arriba2 espacio-linea-abajo2">
                        <div class="col-sm-12">
                            <hr>
                        </div>
                    </div>
                    {{ form_start(edit_form) }}
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="col-sm-9">
                                <div class="row">
                                    <div class="col-sm-12">
                                        <p style="margin-bottom: 5px">Pagos</p>
                                        <table id="servicioAdicional" class="table text-center">
                                            <thead>
                                            <tr>
                                                <th>Pago</th>
                                                <th>Divisa</th>
                                                <th>Fecha de pago</th>
                                                <th>Forma de pago</th>
                                                <th></th>
                                            </tr>
                                            </thead>
                                            <tbody id="pago-fields-list0"
                                                   class="lista-pagos"
                                                   data-prototype="
                                     {% filter escape %}
                                     {{ include('ordendetrabajo/coleccion-pago.twig', { 'form': edit_form.contratistapagos.vars.prototype }) }}
                                     {% endfilter %}
                                     ">
                                            {% for i, pagoField in edit_form.contratistapagos %}
                                                {% form_theme pagoField 'marinahumeda/cotizacion/pago/coleccion-pago.twig' %}
                                                <tr class="pago-agregado">
                                                    <td>{{ form_widget(pagoField.cantidad) }} </td>
                                                    <td>{{ form_widget(pagoField.divisa) }} </td>
                                                    <td>{{ form_widget(pagoField.fecha) }} </td>
                                                    <td>{{ form_widget(pagoField.forma) }}</td>
                                                    <td style="vertical-align: middle">
                                                        <a href="#" class="remove-pago btn btn-xs btn-naranja">
                                                            <i class="fa fa-times" aria-hidden="true"></i>
                                                        </a>
                                                    </td>
                                                </tr>
                                            {% endfor %}
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-11">
                                        <a href="#" id="" class="add-another-pago letra-azul pull-right"
                                           data-cantidad="{{ edit_form.contratistapagos|length }}" data-idlista="0">
                                            + Agregar Pago
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <button type="submit" class="pull-right btn btn-azul">
                                <i class="fa fa-floppy-o" aria-hidden="true"></i>
                                Guardar
                            </button>
                        </div>
                    </div>
                    {{ form_end(edit_form) }}
                    <div class="row espacio-linea-arriba2 espacio-linea-abajo2">
                        <div class="col-sm-12">
                            <hr>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-4">
                            <label>Pagado</label>
                            <div class='info-input'>$ {{ (pagadoUSD/100)|number_format(2) }} USD</div>
                            <br>
                            <div class='info-input'>$ {{ ((pagadoUSD*dolar)/10000)|number_format(2) }} MXN</div>
                        </div>
                        <div class="col-sm-4">
                            <label>Saldo</label>
                            <div class='info-input'>$ {{ (saldoUSD/100)|number_format(2) }} USD</div>
                            <br>
                            <div class='info-input'>$ {{ ((saldoUSD*dolar)/10000)|number_format(2) }} MXN</div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %}