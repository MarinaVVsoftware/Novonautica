{% extends 'estructura/plantilla.twig' %}

{% block title %}
    Novonautiva | Usuarios
{% endblock %}

{% block contwrapper %}
    <div class="content-wrapper">
        <section class="content">
            <div class="panel panel-novo">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-sm-6">
                            <h3 class="panel-title">Editar Producto</h3>
                        </div>
                        <div class="col-sm-6">
                            <a class="btn btn-contorno-azul pull-right" href="{{ path('producto_index') }}">Regresar</a>
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    {% form_theme edit_form 'estructura/temaerror.html.twig' %}
                    {{ form_start(edit_form) }}
                    <div class="row">
                        <div class="col-sm-6">
                            {{ form_errors(edit_form.nombre) }}
                            {{ form_errors(edit_form.codigo) }}
                            {{ form_errors(edit_form.descripcion) }}
                            {{ form_errors(edit_form.precio) }}
                            {{ form_errors(edit_form.cantidad) }}
                            {{ form_errors(edit_form.unidad) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            {{ form_label(edit_form.nombre) }}
                            {{ form_widget(edit_form.nombre) }}

                            {{ form_label(edit_form.codigo) }}
                            {{ form_widget(edit_form.codigo) }}

                            {{ form_label(edit_form.descripcion) }}
                            {{ form_widget(edit_form.descripcion) }}

                            {{ form_label(edit_form.precio) }}
                            {{ form_widget(edit_form.precio) }}

                            {{ form_label(edit_form.cantidad) }}
                            {{ form_widget(edit_form.cantidad) }}

                            {{ form_label(edit_form.unidad) }}
                            {{ form_widget(edit_form.unidad) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <button type="submit" class="btn btn-azul pull-right">
                                <i class="fa fa-floppy-o" aria-hidden="true"></i>
                                Guardar
                            </button>
                        </div>
                    </div>
                    {{ form_end(edit_form) }}
                    <div class="row espacio-linea-arriba2">
                        <div class="col-sm-12">
                            <a class="btn btn-naranja pull-right" href="{{ path('producto_index') }}">
                                <i class="fa fa-ban" aria-hidden="true"></i>
                                Cancelar
                            </a>
                        </div>
                    </div>
                    <div class="row espacio-linea-arriba2">
                        <div class="col-sm-12">
                            <button type="button" class="btn btn-borrar pull-right" data-toggle="modal"
                                    data-target="#modalBorrar">
                                <i class="fa fa-trash-o" aria-hidden="true"></i>
                                Borrar
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %}
{% block modalborrar %}
    {% embed 'estructura/modalborrar.twig' %}
        {% block botonborra %}
            {{ form_start(delete_form) }}
            <button type="submit" class="btn btn-borrar">
                <i class="fa fa-trash-o" aria-hidden="true"></i>
                Borrar
            </button>
            {{ form_end(delete_form) }}
        {% endblock %}
    {% endembed %}
{% endblock %}
