{% extends 'estructura/plantilla.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/datatables.min.css') }}">
{% endblock %}

{% block contwrapper %}
    <div class="content-wrapper">
        <section class="content">
            <div class="panel panel-novo">
                <div class="panel-heading">
                    <h3 class="panel-title">Slip Movimientos</h3>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <table class="table table-novo">
                                <thead>
                                <tr>
                                    <th>Barco</th>
                                    <th>Slip</th>
                                    <th>Folio</th>
                                    <th>Fecha Llegada</th>
                                    <th>Fecha Salida</th>
                                    <th>Registrado</th>
                                    <th></th>
                                </tr>
                                </thead>
                                {#<tbody>
                                {% for slipMovimiento in slipMovimientos %}
                                    {% if slipMovimiento %}
                                    <tr>
                                        <td>{{ slipMovimiento.marinahumedacotizacion.barco }}</td>
                                        <td>{{ slipMovimiento.slip.num }}</td>
                                        <td>
                                            {% if slipMovimiento.marinaHumedaCotizacion.foliorecotiza == 0 %}
                                                {{ slipMovimiento.marinaHumedaCotizacion.folio }}
                                            {% else %}
                                                {{ slipMovimiento.marinaHumedaCotizacion.folio }}-{{ slipMovimiento.marinaHumedaCotizacion.foliorecotiza }}
                                            {% endif %}
                                        </td>
                                        <td>{% if slipMovimiento.marinahumedacotizacion.fechaLlegada %}{{ slipMovimiento.marinahumedacotizacion.fechaLlegada|date('Y-m-d') }}{% endif %}</td>
                                        <td>{% if slipMovimiento.marinahumedacotizacion.fechaSalida %}{{ slipMovimiento.marinahumedacotizacion.fechaSalida|date('Y-m-d') }}{% endif %}</td>
                                        <td>{{ slipMovimiento.estatus }}</td>
                                        <td>{% if slipMovimiento.createdAt %}{{ slipMovimiento.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                                        <td>
                                            <a class="btn btn-azul" href="{{ path('slipmovimiento_edit', { 'id': slipMovimiento.id }) }}">Editar</a>
                                        </td>
                                    </tr>
                                    {% endif %}
                                {% endfor %}
                                </tbody>#}
                            </table>
                        </div>
                    </div>
                </div>
                <div class="panel-footer">
                    <div class="row">
                        <div class="col-sm-12">
                            <a class="btn btn-azul" href="{{ path('slipmovimiento_new') }}">
                                <i class="fa fa-plus" aria-hidden="true"></i>
                                Asignar
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('js/datatables.min.js') }}"></script>
    <script type="text/javascript">
      (function ($, settings) {
        $('.table-novo').DataTable({
          ...settings,
          order: [[6, 'desc']],
          ajax: '{{ path('slipmovimiento_index') }}',
          createdRow: function (row, data) {
            let actionsCell = row.cells[6];

            actionsCell.innerHTML = `
                <a href="ocupacion/${data[6]}/editar">
                    <i class="fa fa-pencil" aria-hidden="true"></i>
                </a>
            `;
          }
        });
      })(jQuery, datatablesSettings);
    </script>
{% endblock %}
