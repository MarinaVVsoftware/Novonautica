{% extends 'estructura/plantilla.twig' %}
{% import 'estructura/modalborrar.twig' as modal %}
{% block contwrapper %}
<div class="content-wrapper">
    <section class="content">
        <div class="panel panel-novo">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-sm-6">
                        <h3 class="panel-title">{{ title }}</h3>
                    </div>
                    <div class="col-sm-6">
                        <a class="btn btn-contorno-azul pull-right" href="{{ path('astillero_proveedor_index') }}">Regresar</a>
                    </div>
                </div>
            </div>
            <div class="panel-body">
                {{ form_start(edit_form) }}
                <div class="row">
                    <div class="col-sm-12">
                        {{ form_widget(edit_form) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-12">
                        <button type="submit" class="btn btn-azul pull-right">
                            <i class="fa fa-floppy-o" aria-hidden="true"></i>
                            Guardar
                        </button>
                    </div>
                </div>
                {{ form_end(edit_form) }}
            </div>
            <div class="panel-footer">
                {{ delete_form is defined ? modal.deleteButton() : '' }}
                {#{{ form_start(delete_form) }}#}
                {#<input type="submit" value="Delete">#}
                {#{{ form_end(delete_form) }}#}
            </div>
        </div>
    </section>
</div>
{% endblock %}
{% block modals %}
    {{ delete_form is defined ? modal.deleteModal(delete_form) : '' }}
{% endblock %}