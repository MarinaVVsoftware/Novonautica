{% extends 'estructura/plantilla.twig' %}

{% block title %}
    Novonautiva | Agregar Cliente
{% endblock %}

{% block contwrapper %}
    <div class="content-wrapper">
        <section class="content">
            <div class="panel panel-novo">
                <div class="panel-heading">
                    <h3 class="panel-title">Nuevo Cliente</h3>
                </div>
                <div class="panel-body">
                    {{ form_start(form) }}
                    <div class="row">
                        <div class="col-sm-5">
                            {{ form_row(form.nombre) }}
                            {{ form_row(form.correo) }}
                            {{ form_row(form.password) }}
                            {{ form_row(form.telefono) }}
                            {{ form_row(form.celular) }}
                            {{ form_row(form.direccion) }}
                        </div>
                        <div class="col-sm-5">
                            {{ form_row(form.empresa) }}
                            {{ form_row(form.razonsocial) }}
                            {{ form_row(form.rfc) }}
                            {{ form_row(form.direccionfiscal) }}
                            {{ form_row(form.correofacturacion) }}
                            <div>
                                Estatus
                                <span class="cont-label-novo">
                                {{ form_errors(form.estatus) }}
                                    {{ form_widget(form.estatus,{'attr': {'checked': 'true'}}) }}
                                    {{ form_label(form.estatus) }}
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <input type="submit" value="Guardar" class="btn btn-azul pull-right"/>
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </section>
    </div>
{% endblock %}
