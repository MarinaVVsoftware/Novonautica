{% extends 'estructura/plantilla.twig' %}

{% block title %}
    Novonautiva | Nuevo Evento
{% endblock %}

{% block contwrapper %}
    <div class="content-wrapper">
        <section class="content">
            <div class="panel panel-novo">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-sm-6">
                            <h3 class="panel-title">Nuevo Evento</h3>
                        </div>
                        <div class="col-sm-6">
                            <a href="{{ path('evento_index') }}" class="btn btn-contorno-azul pull-right">Regresar</a>
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    {% form_theme form 'estructura/temaerror.html.twig' %}
                    {{ form_start(form) }}
                    <div class="row">
                        <div class="col-sm-12">
                            {{ form_errors(form.titulo) }}
                            {{ form_errors(form.fechainicio) }}
                            {{ form_errors(form.fechafin) }}
                            {{ form_errors(form.horainicio) }}
                            {{ form_errors(form.horafin) }}
                            {{ form_errors(form.descripcion) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            {{ form_label(form.titulo) }}
                            {{ form_widget(form.titulo) }}
                        </div>
                        <div class="col-sm-6">
                            <div class="input-daterange" id="rangoFehas">
                                <div class="row">
                                    <div class="col-sm-6">
                                        {{ form_label(form.fechainicio) }}
                                        {{ form_widget(form.fechainicio) }}
                                    </div>
                                    <div class="col-sm-6">
                                        {{ form_label(form.fechafin) }}
                                        {{ form_widget(form.fechafin) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            {{ form_label(form.descripcion) }}
                            {{ form_widget(form.descripcion) }}
                        </div>
                        <div class="col-sm-6">
                            <div class="row">
                                <div class="col-sm-6">
                                    <p>{{ form_label(form.horainicio) }}</p>
                                    <p>{{ form_widget(form.horainicio) }}</p>
                                </div>
                                <div class="col-sm-6">
                                    <p>{{ form_label(form.horafin) }}</p>
                                    <p>{{ form_widget(form.horafin) }}</p>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-6">
                                    {{ form_label(form.fondocolor) }}
                                    {{ form_widget(form.fondocolor) }}
                                </div>
                                <div class="col-sm-6">
                                    {{ form_label(form.letracolor) }}
                                    {{ form_widget(form.letracolor) }}
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-6">
                            {{ form_row(form.isPublico) }}
                        </div>
                    </div>
                    <div class="row espacio-linea">
                        <div class="col-sm-12">
                            <hr>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <button type="submit" class="btn btn-azul pull-right">
                                <i class="fa fa-floppy-o" aria-hidden="true"></i>
                                Guardar
                            </button>
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </section>
    </div>
{% endblock %}
